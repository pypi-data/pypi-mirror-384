<odoo>
    <record id="view_account_config_settings" model="ir.ui.view">
        <field name="name">overdue.reminder.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="invoicing_settings" position="after">
                <block id="overdue_reminder" title="Overdue Invoice Reminder">
                    <setting id="overdue_reminder_attach_invoice">
                        <field name="overdue_reminder_attach_invoice" />
                    </setting>
                    <setting id="overdue_reminder_partner_policy">
                        <field name="overdue_reminder_partner_policy" />
                    </setting>
                    <setting id="overdue_reminder_interface">
                        <field name="overdue_reminder_interface" />
                    </setting>
                    <setting id="overdue_reminder_interface">
                        <field name="overdue_reminder_start_days" class="oe_inline" />
                        <span> days</span>
                    </setting>
                    <setting id="overdue_reminder_min_interval_days">
                        <field
                            name="overdue_reminder_min_interval_days"
                            class="oe_inline"
                        />
                        <span> days</span>
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
