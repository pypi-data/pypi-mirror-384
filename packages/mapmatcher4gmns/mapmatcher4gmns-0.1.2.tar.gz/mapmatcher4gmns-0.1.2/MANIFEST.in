# Include documentation and license files
include README.md
include LICENSE
include pyproject.toml

# Include all Python files in mapmatcher4gmns
recursive-include mapmatcher4gmns *.py

# Include test data if needed (optional)
recursive-include mapmatcher4gmns/test/data *.csv *.qgz

# Exclude compiled Python files and caches
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store

