<odoo>
    <record id="view_ddaa_authorship_conditions_tree" model="ir.ui.view">
        <field name="name">ddaa.authorship.condition.tree</field>
        <field name="model">authorship.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ddaa_conditions">
                    <tree editable="bottom" default_order="min_qty" decoration-muted="min_qty==0" decoration-bf="min_qty==0">
                        <field name="min_qty" width="50%"/>
                        <field name="ddaa_percentage" width="50%"/>
                    </tree>
                </field>
            </tree>
        </field>
    </record>
</odoo>