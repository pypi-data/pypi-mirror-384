<odoo>
    <record id="stock_move_line_editorial_view" model="ir.ui.view">
      <field name="name">stock.move.line.editorial.tree.view</field>
      <field name="model">stock.move.line</field>
      <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='product_id']" position="after">
          <field name="product_barcode"/>
          <field name="pricelist_id"/>
        </xpath>
      </field>
    </record>
    <record id="stock_picking_editorial_view" model="ir.ui.view">
      <field name="name">stock.picking.editorial.view</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
          <field name="product_barcode"/>
        </xpath>
      </field>
    </record>
    <record id="stock_picking_vpicktree_editorial_view" model="ir.ui.view">
      <field name="name">stock.picking.vpicktree.editorial.view</field> 
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.vpicktree"/> 
      <field name="arch" type="xml"> 
        <xpath expr="//tree/field[@name='scheduled_date']" position="after">
          <field name="date_done" optional="show"/>
        </xpath>
      </field>
    </record>

    <!-- Add pricelist in filters for search views -->
    <record id="view_picking_internal_search_editorial" model="ir.ui.view">
      <field name="name">stock.picking.search.editorial</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_internal_search"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="after">
          <field name="pricelist_id"/>
        </field>
      </field>
    </record>

    <record id="view_stock_move_search_editorial" model="ir.ui.view">
      <field name="name">stock.move.search.editorial</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_move_search"/>
      <field name="arch" type="xml">
        <field name="product_id" position="after">
          <field name="pricelist_id"/>
        </field>
      </field>
    </record>

</odoo>
