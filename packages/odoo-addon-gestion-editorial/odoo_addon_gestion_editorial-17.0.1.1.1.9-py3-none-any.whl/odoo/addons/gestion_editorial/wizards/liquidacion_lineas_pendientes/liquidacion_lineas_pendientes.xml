<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_pendientes_liquidar_line_ventas_detailed_operation_tree" model="ir.ui.view">
        <field name="name">liquidacion.editorial.line.operations.tree.ventas</field>
        <field name="model">liquidacion.line.editorial</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="product_id" required="1" readonly="1"/>
                <field name="product_barcode" readonly="1"/>
                <field name="total_qty_disponibles" readonly="1"/>
                <field name="total_qty_a_liquidar" string="A devolver"
                  column_invisible="parent.liquidacion_type not in ('in_refund', 'out_refund')"
                  force_save="1"/>
                <field name="total_qty_a_liquidar" string="A liquidar"
                  column_invisible="parent.liquidacion_type not in ('out_invoice', 'in_invoice')"
                  force_save="1"/>
            </tree>
        </field>
    </record>

    <record id="view_pendientes_liquidar_line_compras_detailed_operation_tree" model="ir.ui.view">
        <field name="name">liquidacion.editorial.line.operations.tree.compras</field>
        <field name="model">liquidacion.line.editorial</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="product_id" required="1" readonly="1"/>
                <field name="product_barcode" readonly="1"/>
                <field name="total_qty_disponibles" readonly="1" invisible="context.get('parent.liquidacion_type') == 'in_refund'"/>
                <field name="total_qty_disponibles_devolver_dep_com" readonly="1" invisible="context.get('parent.liquidacion_type') == 'in_invoice'"/>
                <field name="vendidos_sin_liquidar" readonly="1" invisible="context.get('parent.liquidacion_type') == 'in_refund'"/>
                <field name="total_qty_a_liquidar" string="A devolver"
                  column_invisible="parent.liquidacion_type not in ('in_refund', 'out_refund')"
                  force_save="1"/>
                <field name="total_qty_a_liquidar" string="A liquidar"
                  column_invisible="parent.liquidacion_type not in ('out_invoice', 'in_invoice')"
                  force_save="1"/>
            </tree>
        </field>
    </record>

    <record id="liquidacion_wizard_view_form_ventas" model="ir.ui.view">
      <field name="name">liquidacion.lines.wizard.form.ventas</field>
      <field name="model">liquidacion.wizard.editorial</field>
      <field name="arch" type="xml">
        <form string="Depósito actual">
          <group>
            <field name="partner_id" required="1" readonly="1"/>
            <field name="liquidacion_type" invisible="1"/>
            <field name="liquidacion_id" invisible="1"/>
          </group>
          <group>
            <field name="liquidacion_line_ids" context="{'tree_view_ref': 'gestion_editorial.view_pendientes_liquidar_line_ventas_detailed_operation_tree'}" />
          </group>
          <footer>
            <button name="seleccionar_para_liquidar" string="Añadir seleccionados" type="object" class="btn-primary"/>
            <button name="select_all_liquidacion_lines" string="Añadir todos" type="object" class="btn-primary"/>
            <button special="cancel" string="Cancelar" class="btn-danger"/>
          </footer>
       </form>
      </field>
    </record>

    <record id="liquidacion_wizard_view_form_compras" model="ir.ui.view">
      <field name="name">liquidacion.lines.wizard.form.compras</field>
      <field name="model">liquidacion.wizard.editorial</field>
      <field name="arch" type="xml">
        <form string="Depósito actual">
          <group>
            <field name="partner_id" required="1" readonly="1"/>
            <field name="liquidacion_type" invisible="1"/>
            <field name="liquidacion_id" invisible="1"/>
          </group>
          <group>
            <field name="liquidacion_line_ids" context="{'tree_view_ref': 'gestion_editorial.view_pendientes_liquidar_line_compras_detailed_operation_tree'}" />
          </group>
          <footer>
            <button name="seleccionar_para_liquidar" string="Añadir seleccionados" type="object" class="btn-primary"/>
            <button name="select_all_liquidacion_lines" string="Añadir todos" type="object" class="btn-primary"/>
            <button special="cancel" string="Cancelar" class="btn-danger"/>
          </footer>
       </form>
      </field>
    </record>

    <record id="action_liquidacion_wizard_ventas" model="ir.actions.act_window">
        <field name="name">Asistente para depósito en venta</field>
        <field name="res_model">liquidacion.wizard.editorial</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="liquidacion_wizard_view_form_ventas"/>
        <field name="target">new</field>
    </record>

    <record id="action_liquidacion_wizard_compras" model="ir.actions.act_window">
        <field name="name">Asistente para depósito en compra</field>
        <field name="res_model">liquidacion.wizard.editorial</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="liquidacion_wizard_view_form_compras"/>
        <field name="target">new</field>
    </record>

  </data>
</odoo>
