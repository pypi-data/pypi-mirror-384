<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="product_category_books" model="product.category">
            <field name="name">Libros</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        <record id="product_category_digital_books" model="product.category">
            <field name="name">Libro Digital</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <!-- Deposit sales -->
        <record id="stock_location_deposito_venta" model="stock.location">
            <field name="name">Depósitos</field>
            <field name="usage">internal</field>
        </record>
        <record id="stock_picking_type_rectificacion_liq" model="stock.picking.type">
            <field name="name">Rectificación de Liquidación</field>
            <field name="sequence_code">RLIQ</field>
            <field name="code">incoming</field>
            <field name="show_reserved">True</field>
            <field name="show_operations">False</field>
            <field name="use_existing_lots">False</field>
            <field name="warehouse_id">1</field>
            <field name="default_location_src_id" ref="stock.stock_location_customers"/>
            <field name="default_location_dest_id" ref="stock_location_deposito_venta"/>
        </record>

        <!-- Pricelist for "Venta en firme"-->
        <record id="product_pricelist_direct_sales" model="product.pricelist">
            <field name="name">Venta en firme</field>
            <field name="currency_id" ref="base.EUR"/>
            <field name="active" eval="True"/>
            <field name="company_id" eval="False"/>
            <field name="route_id" ref="gestion_editorial.route_direct_sales"/>
        </record>

        <record id="product_pricelist_item_direct_sales" model="product.pricelist.item">
            <field name="pricelist_id" ref="product_pricelist_direct_sales"/>
            <field name="applied_on">2_product_category</field>
            <field name="categ_id" ref="product_category_books"/>
            <field name="compute_price">formula</field>
            <field name="base">list_price</field>
            <field name="price_discount" eval="0.0"/>
        </record>

        <!-- Pricelist routes and rules for "Venta en depósito"-->
        <record id="route_deposit_sales" model="stock.route">
            <field name="name">Ruta venta en depósito</field>
            <field name="sequence">10</field>
            <field name="product_categ_selectable">True</field>
            <field name="product_selectable">True</field>
            <field name="show_in_pricelist">True</field>
        </record>

        <record id="rule_deposit_sales1" model="stock.rule">
            <field name="name">Regla venta en depósito 1</field>
            <field name="route_id" ref="route_deposit_sales"/>
            <field name="location_src_id" ref="stock.stock_location_stock"/> 
            <field name="location_dest_id" ref="stock_location_deposito_venta"/>
            <field name="picking_type_id" ref="stock.picking_type_out"/>
            <field name="action">pull</field>
            <field name="procure_method">make_to_stock</field>
            <field name="group_propagation_option">propagate</field>
            <field name="warehouse_id">1</field>
            <field name="sequence">10</field>
        </record>

        <record id="rule_deposit_sales2" model="stock.rule">
            <field name="name">Regla venta en depósito 2</field>
            <field name="route_id" ref="route_deposit_sales"/>
            <field name="location_src_id" ref="stock_location_deposito_venta"/> 
            <field name="location_dest_id" ref="stock.stock_location_customers"/>
            <field name="picking_type_id" ref="stock.picking_type_out"/>
            <field name="action">pull</field>
            <field name="procure_method">make_to_order</field>
            <field name="group_propagation_option">propagate</field>
            <field name="warehouse_id">1</field>
            <field name="sequence">15</field>
        </record>

        <record id="product_pricelist_deposit_sales" model="product.pricelist">
            <field name="name">Venta en depósito</field>
            <field name="currency_id" ref="base.EUR"/>
            <field name="active" eval="True"/>
            <field name="company_id" eval="False"/>
            <field name="route_id" ref="route_deposit_sales"/>
        </record>

        <record id="product_pricelist_item_deposit_sales" model="product.pricelist.item">
            <field name="pricelist_id" ref="product_pricelist_deposit_sales"/>
            <field name="applied_on">2_product_category</field>
            <field name="categ_id" ref="product_category_books"/>
            <field name="compute_price">formula</field>
            <field name="base">list_price</field>
            <field name="price_discount" eval="0.0"/>
        </record>

        <!-- Contact Types -->
        <record id="contact_type_author" model="res.partner.type">
            <field name="name">Autora</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_translator" model="res.partner.type">
            <field name="name">Traductora</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_editor" model="res.partner.type">
            <field name="name">Editora</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_guest_editor" model="res.partner.type">
            <field name="name">Editora invitada</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_illustrator" model="res.partner.type">
            <field name="name">Ilustradora</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_prologue_by" model="res.partner.type">
            <field name="name">Prólogo</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_epilogue_by" model="res.partner.type">
            <field name="name">Epílogo</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_introduction_by" model="res.partner.type">
            <field name="name">Introducción</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_designed_by" model="res.partner.type">
            <field name="name">Diseñadora</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_screenplay_by" model="res.partner.type">
            <field name="name">Guionista</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_text_by" model="res.partner.type">
            <field name="name">Textos</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_commentaries_by" model="res.partner.type">
            <field name="name">Comentarios</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_drawings_by" model="res.partner.type">
            <field name="name">Dibujos</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_photographer" model="res.partner.type">
            <field name="name">Fotógrafa</field>
            <field name="default_ddaa_percentage_books">10</field>
            <field name="default_ddaa_percentage_ebooks">10</field>
        </record>
        <record id="contact_type_unknown" model="res.partner.type">
            <field name="name">Desconocido</field>
            <field name="default_ddaa_percentage_books">0</field>
            <field name="default_ddaa_percentage_ebooks">0</field>
        </record>


        <!-- Payment Terms / Condiciones de pago -->
        <record id="account_payment_term_120days" model="account.payment.term">
            <field name="name">120 Days</field>
            <field name="note">Payment terms: 120 Days</field>
            <field name="line_ids" eval="[Command.clear(), Command.create({'value': 'percent', 'value_amount': 100.0, 'nb_days': 120})]"/>
        </record>

        <record id="account_payment_term_180days" model="account.payment.term">
            <field name="name">180 Days</field>
            <field name="note">Payment terms: 180 Days</field>
            <field name="line_ids" eval="[Command.clear(), Command.create({'value': 'percent', 'value_amount': 100.0, 'nb_days': 180})]"/>
        </record>

    </data>
</odoo>
