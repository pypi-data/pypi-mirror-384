<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="product_category_ddaa" model="product.category">
            <field name="name">Derechos de autoría</field>
            <field name="parent_id">1</field>
        </record>
        <record id="stock_location_authors" model="stock.location">
            <field name="name">Autores</field>
            <field name="location_id" ref="stock.stock_location_locations_partner"/>
            <field name="usage">view</field>
            <field name="company_id"></field>
        </record>
        <record id="stock_location_authors_courtesy" model="stock.location">
            <field name="name">Cortesía</field>
            <field name="location_id" ref="stock_location_authors"/>
            <field name="usage">supplier</field>
            <field name="company_id"></field>
        </record>
        <record id="stock_location_authors_royalties" model="stock.location">
            <field name="name">Cuenta de regalías</field>
            <field name="location_id" ref="stock_location_authors"/>
            <field name="usage">supplier</field>
            <field name="company_id"></field>
        </record>
        <record id="stock_route_authors_paid" model="stock.route">
            <field name="name">Ruta venta Autoras</field>
            <field name="product_categ_selectable" eval="True"/>
            <field name="product_selectable" eval="True"/>
            <field name="company_id"></field>
            <field name="sequence">10</field>
            <field name="show_in_pricelist">True</field>

        </record>
        <record id="stock_rule_authors_paid" model="stock.rule">
            <field name="name">Regla venta a autoras</field>
            <field name="route_id" ref="stock_route_authors_paid"/>
            <field name="action">pull</field>
            <field name="location_src_id" ref="stock.stock_location_stock"/>
            <field name="location_dest_id" ref="stock.stock_location_customers"/>
            <field name="picking_type_id" ref="stock.picking_type_out"/>
            <field name="procure_method">make_to_stock</field>
            <field name="warehouse_id">1</field>
            <field name="group_propagation_option">propagate</field>
        </record>

        <record id="authors_pricelist" model="product.pricelist">
            <field name="name">Venta a autoras</field>
            <field name="currency_id" ref="base.EUR"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="sequence">20</field>
            <field name="route_id" ref="stock_route_authors_paid"/>
            <field name="genera_ddaa" eval="False"/>
        </record>

        <record id="stock_picking_type_entrega_autoria" model="stock.picking.type">
            <field name="name">Entrega de libros a autoría (Cuenta de regalías)</field>
            <field name="sequence_code">LIB_AUTOR</field>
            <field name="code">outgoing</field>
            <field name="show_reserved">True</field>
            <field name="show_operations">False</field>
            <field name="use_existing_lots">False</field>
            <field name="warehouse_id">1</field>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock_location_authors_royalties"/>
        </record>
        <record id="product_books_delivered_to_authorship" model="product.product">
            <field name="name">Libros entregados a autoría</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">True</field>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
        </record>
        <record id="product_royalties_advance" model="product.product">
            <field name="name">Adelanto de regalías</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">True</field>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
        </record>
        <record id="stock_picking_type_courtesy_delivery" model="stock.picking.type">
            <field name="name">Entrega de libros de cortesía</field>
            <field name="sequence_code">LIB_COURTESY</field>
            <field name="code">outgoing</field>
            <field name="show_reserved">True</field>
            <field name="show_operations">False</field>
            <field name="use_existing_lots">False</field>
            <field name="warehouse_id">1</field>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock_location_authors_courtesy"/>
        </record>
    </data>
</odoo>
