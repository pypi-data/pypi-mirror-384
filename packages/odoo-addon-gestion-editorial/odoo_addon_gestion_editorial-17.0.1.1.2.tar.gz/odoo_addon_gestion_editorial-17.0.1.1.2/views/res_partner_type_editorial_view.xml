<odoo>
    <record id="view_partner_type_tree" model="ir.ui.view">
        <field name="name">res.partner.type.tree</field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de contacto" editable="bottom">
                <field name="name"/>
                <field name="default_ddaa_percentage_books"/>
                <field name="default_ddaa_percentage_ebooks"/>
            </tree>
        </field>
    </record>
    <record id="view_partner_type_form" model="ir.ui.view">
        <field name="name">res.partner.type.form</field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <form string="Tipos de contacto">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="default_ddaa_percentage_books"/>
                        <field name="default_ddaa_percentage_ebooks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_partner_type_form" model="ir.actions.act_window">
        <field name="name">Tipos de contacto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.type</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>