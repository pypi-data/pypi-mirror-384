<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="report_deliveryslip_document_editorial_view" inherit_id="stock.report_delivery_document">

            <xpath expr="//th[@name='th_sm_product']" position="before">
                <th name="th_barcode"><t t-out="'Barcode / ISBN'"/></th>
            </xpath>

            <xpath expr="//th[@name='th_sml_product']" position="before">
                <th name="th_barcode"><t t-out="'Barcode / ISBN'"/></th>
            </xpath>

            <xpath expr="//table[@name='stock_move_table']//tbody//tr/td[1]" position="before">
                <td><span t-field="move.product_barcode"/></td>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']//tbody//tr/td[1]" position="before">
                <td><span t-field="move_line.product_barcode"/></td>
            </xpath>

        </template>
    </data>
</odoo>
