<odoo>
    <record id="res_partner_editorial_form_view" model="ir.ui.view">
      <field name="name">res.partner.editorial.form.view</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_type']" position="after">
            <field name="is_author"/>
            <label for="is_author"/>
        </xpath>
        <xpath expr="//field[@name='type']" position="before">
            <field name="cliente_num"/>
        </xpath>
        <xpath expr="//field[@name='vat']" position="attributes">
            <attribute name="string">NIF</attribute>
        </xpath>
        <xpath expr="//span[hasclass('o_vat_label')]" position="replace">
            <span class="o_vat_label">NIF</span>
        </xpath>
        <xpath expr="//field[@name='property_supplier_payment_term_id']" position="after">
            <field name="purchase_liq_pricelist"/>
        </xpath>
        <xpath expr="//field[@name='purchase_liq_pricelist']" position="after">
            <field name="default_purchase_type"/>
        </xpath>
         <xpath expr="//notebook" position="before">
            <div>
                <button name="export_sales_deposit" type="object"
                        string="Exportar depósito de ventas" class="oe_highlight me-2"
                        icon="fa-download"/>
                <button name="export_purchases_deposit" type="object" default_focus="1"
                        string="Exportar depósito de compras" class="oe_highlight"
                        icon="fa-download"/>
            </div>   
        </xpath>

        <xpath expr="//notebook/page[@name='contact_addresses']" position="attributes">
            <attribute name="autofocus">False</attribute>
        </xpath>

        <xpath expr="//notebook/page[1]" position="before">
            <page string="Libros relacionados" name="books" autofocus="autofocus" invisible="not authorship_ids">
                <field name="authorship_ids">
                    <kanban action="action_open_product" type="object" create="false" editable="false" edit="false" >
                        <field name="product_id" string="Autoría/Receptoras de regalías"/>
                        <field name="contact_type" string="Tipo de contacto"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div>
                                    <div class="o_kanban_image">
                                        <img t-att-src="kanban_image('product.template', 'image_128', record.product_id.raw_value)" t-att-alt="record.product_id.value"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><field name="product_id"/></strong>
                                        </div>
                                        <field name="contact_type"/>
                                    </div>
                                </div>
                            </t>
                        </templates>
                      </kanban>
                </field>
            </page>
        </xpath>
      </field>
    </record>
</odoo>
