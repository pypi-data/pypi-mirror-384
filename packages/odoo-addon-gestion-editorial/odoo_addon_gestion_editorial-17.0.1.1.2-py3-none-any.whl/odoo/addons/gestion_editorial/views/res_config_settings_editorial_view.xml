<odoo>
    <record id="res_config_settings_view_form_editorial" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.editorial</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Editorial" string="Gestión editorial" name="gestion_editorial" groups="sales_team.group_sale_manager">
                    <block title="Derechos de Autoría" name="editorial_ddaa">
                        <setting string="Activar derechos de autoría" id="setting_editorial_ddaa"
                         help="Activa la generación de derechos de autoría.">
                            <field name="module_editorial_ddaa"/>
                        </setting>
                        <setting string="Categoría para DDAA" id="setting_product_category_ddaa" invisible="not module_editorial_ddaa">
                            <field name="product_category_ddaa_id"/>
                        </setting>
                        <setting string="Categorías madre que generan DDAA" id="setting_product_categories_genera_ddaa" invisible="not module_editorial_ddaa">
                            <field name="product_categories_genera_ddaa_ids" widget="many2many_tags"/>
                        </setting>
                        <setting string="Porcentajes de regalías" id="setting_pricelists_generate_ddaa" invisible="not module_editorial_ddaa">
                            <field name="pricelists_generate_ddaa"/>
                            <button name="%(action_partner_type_form)d" icon="oi-arrow-right" type="action" string="Configurar regalías" class="btn-link o_web_settings_access_rights"/>
                        </setting>
                    </block>
                    <block title="Depósito compra" name="editorial_deposito_compra">
                        <setting string="Tipo de operación de depósito compra" id="setting_stock_picking_type_compra_deposito">
                            <field name="stock_picking_type_compra_deposito_id"/>
                        </setting>
                        <setting string="Diario para liquidaciones de compra a depósito" id="setting_account_journal_deposito_compra">
                            <field name="account_journal_deposito_compra_id"/>
                        </setting>
                    </block>
                    <block title="Depósito venta" name="editorial_deposito_venta">
                        <setting string="Ubicación de depósito venta" id="setting_location_venta_deposito">
                            <field name="location_venta_deposito_id"/>
                        </setting>
                        <setting string="Diario para liquidaciones de venta a depósito" id="setting_account_journal_deposito_venta">
                            <field name="account_journal_deposito_venta_id"/>
                        </setting>
                    </block>
                    <block title="Visibilidad limitada por proveedor" name="editorial_visibility">
                        <setting string="Visibilidad limitada por proveedor" id="setting_visibility_limited_by_supplier"
                         help="Los nuevos productos tendrán por defecto la visibilidad limitada por proveedor si esta casilla esta activada.">
                            <field name="visibility_limited_by_supplier"/>
                        </setting>
                    </block>
                    <block title="Ubicaciones y tarifas" name="editorial_ubicaciones">
                        <setting string="Ubicación promoción" id="setting_location_promotion">
                            <field name="location_promotion_id"/>
                        </setting>
                        <setting string="Tarifa para ventas a autor" id="setting_sales_to_author_pricelist">
                            <field name="sales_to_author_pricelist"/>
                        </setting>
                        <setting string="Ubicación libros entregados por cortesía a autores" id="setting_location_authors_courtesy">
                            <field name="location_authors_courtesy_id"/>
                        </setting>
                        <setting string="Ubicación libros entregados a cuenta de regalías de autores" id="setting_location_authors_royalties">
                            <field name="location_authors_royalties_id"/>
                        </setting>
                    </block>
                    <block title="Integraciones" name="editorial_integrations">
                        <setting string="DILVE" id="gestion_editorial_integrations_dilve">
                            <field name="module_dilve"/>
                            <div class="content-group" invisible="not module_dilve" id="module_dilve_warning">
                                <div class="mt16 text-warning"><strong>Guarde</strong> esta página y regrese para configurar DILVE.</div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>