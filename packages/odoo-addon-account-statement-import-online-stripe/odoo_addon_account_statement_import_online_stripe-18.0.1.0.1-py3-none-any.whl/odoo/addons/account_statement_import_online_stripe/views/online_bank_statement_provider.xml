<odoo>
    <record model="ir.ui.view" id="online_bank_statement_provider_form">
        <field name="name">online.bank.statement.provider.form</field>
        <field name="model">online.bank.statement.provider</field>
        <field
            name="inherit_id"
            ref="account_statement_import_online.online_bank_statement_provider_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="after">
                <group
                    name="stripe"
                    string="Stripe configuration"
                    invisible="service != 'stripe'"
                >
                    <field
                        name="api_base"
                        string="API base"
                        groups="base.group_no_one"
                    />
                    <field name="password" string="API Key" password="True" />
                    <field name="stripe_expand" string="Expand" />
                    <field name="stripe_label" string="Statement Label" />
                    <field name="stripe_note" string="Statement Note" />
                    <field name="stripe_reference" string="Statement Reference" />
                    <field name="stripe_fee_label" string="Statement Fee Label" />
                    <field name="stripe_fee_note" string="Statement Fee Note" />
                    <field
                        name="stripe_fee_reference"
                        string="Statement Fee Reference"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
