{
    "Version": "2008-10-17",
    "Statement": [
        {
            "Sid": "AllowAccountUserAccess",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::{{ACCOUNT_ID}}:root"
            },
            "Action": [
                "ecr:BatchCheckLayerAvailability",
                "ecr:BatchGetImage",
                "ecr:GetDownloadUrlForLayer",
                "ecr:DescribeImages",
                "ecr:DescribeRepositories"
            ]
        },
        {
            "Sid": "AllowSageMakerService",
            "Effect": "Allow",
            "Principal": {
                "Service": "sagemaker.amazonaws.com"
            },
            "Action": [
                "ecr:BatchCheckLayerAvailability",
                "ecr:BatchGetImage",
                "ecr:GetDownloadUrlForLayer"
            ]
        }
    ]
}
