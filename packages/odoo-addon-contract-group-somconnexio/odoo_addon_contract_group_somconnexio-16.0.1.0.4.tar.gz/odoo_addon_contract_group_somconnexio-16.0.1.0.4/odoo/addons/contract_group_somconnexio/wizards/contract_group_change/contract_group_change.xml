<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_group_change_wizard" model="ir.ui.view">
      <field name="name">Contract Group Change Wizard</field>
      <field name="model">contract.group.change.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="partner_id" invisible="1"/>
            <field name="new_group"/>
            <field name="contract_group_id" domain="[('partner_id', '=', partner_id)]"/>
          </group>
          <footer>
            <button type="object" name="button_change" string="Change"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_group_change_wizard" model="ir.actions.act_window">
      <field name="name">Change Contract Group</field>
      <field name="res_model">contract.group.change.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <record id="view_contract_form_group_wizard_button" model="ir.ui.view">
      <field name="name">contract.form.group.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_terminate_contract" position="after">
          <button name="%(action_contract_group_change_wizard)d" string="Change Contract Group" type="action" groups="account.group_account_invoice"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
