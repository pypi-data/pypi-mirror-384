{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/ProtocolV3",

  "definitions": {
    "ProtocolV3": {
      "type": "object",
      "properties": {
        "protocolSchema": { "const": "v3" },
        "constants": { "$ref": "#/definitions/Constants" },
        "config": { "$ref": "#/definitions/Config" },
        "steps": { "type": "array", "items": { "$ref": "#/definitions/Step" } },
        "type": { "const": "protocol" },
        "namespace": { "type": "string" },
        "slug": { "type": "string" },
        "version": { "type": "string" },
        "icon": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "catalog_keys": { "type": "array", "items": { "type": "string" } },
        "labels": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" }
            }
          }
        },
        "successWhen": {
          "oneOf": [{ "type": "string" }, { "type": "boolean" }]
        },
        "onFailed": {
          "anyOf": [
            { "type": "string" },
            { "type": "boolean" },
            { "type": "number" },
            { "type": "array" },
            { "type": "null" },
            { "type": "object" }
          ]
        }
      },
      "required": ["protocolSchema", "steps"],
      "additionalProperties": false
    },
    "Constants": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9a-zA-Z][0-9a-zA-Z-_]*$": {
          "anyOf": [
            { "type": "string" },
            { "type": "boolean" },
            { "type": "number" },
            { "type": "array" },
            { "type": "null" },
            { "type": "object" }
          ]
        }
      }
    },
    "Config": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9a-zA-Z][0-9a-zA-Z-_]*$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["label", "type"],
          "properties": {
            "label": { "type": "string" },
            "type": {
              "enum": ["object", "string", "boolean", "number", "secret"]
            },
            "description": { "type": "string" },
            "required": { "type": "boolean" },
            "default": {
              "anyOf": [
                { "type": "string" },
                { "type": "boolean" },
                { "type": "number" },
                { "type": "array" },
                { "type": "null" },
                { "type": "object" }
              ]
            }
          }
        }
      }
    },
    "Step": {
      "type": "object",
      "properties": {
        "if": { "oneOf": [{ "type": "string" }, { "type": "boolean" }] },
        "continueOnError": {
          "oneOf": [{ "type": "string" }, { "type": "boolean" }]
        },
        "id": { "type": "string" },
        "description": { "type": "string" },
        "task": {
          "type": "object",
          "additionalProperties": false,
          "required": ["namespace", "slug", "version", "function"],
          "properties": {
            "namespace": { "type": "string" },
            "slug": { "type": "string" },
            "version": { "type": "string" },
            "function": { "type": "string" }
          }
        },
        "input": {
          "anyOf": [
            { "type": "string" },
            { "type": "boolean" },
            { "type": "number" },
            { "type": "array" },
            { "type": "null" },
            { "type": "object" }
          ]
        },
        "options": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "memoryInMB": {
              "oneOf": [{ "type": "string" }, { "type": "number" }]
            },
            "timeontInSec": {
              "oneOf": [{ "type": "string" }, { "type": "number" }]
            }
          }
        }
      },
      "required": ["task"],
      "additionalProperties": false
    }
  }
}
