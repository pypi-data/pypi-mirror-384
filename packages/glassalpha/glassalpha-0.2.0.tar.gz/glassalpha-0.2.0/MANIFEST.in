# User-facing files that should be in the source distribution

# Core package files
include README.md LICENSE NOTICE CONSTRAINTS.md CODE_OF_CONDUCT.md
include CHANGELOG.md SECURITY.md SECURITY_POSTURE.md TRADEMARK.md CONTRIBUTING.md
include pyproject.toml
include constraints.txt
include pytest.ini
include .yamllint
include audit_config.yaml

# Example artifacts and configs (for quickstart and examples)
recursive-include artifacts *.joblib *.json *.md
recursive-include src/glassalpha/configs *.yaml *.html *.json *.md

# Example project template (generated by `glassalpha quickstart` - not included in source distribution)

# Model files (for quickstart examples) - now in examples/models/
recursive-include examples/models *.pkl *.json

# Root models directory (example models for quickstart)
recursive-include models *.pkl *.md *.json *.csv

# Complete examples directory with notebooks and golden artifacts
recursive-include examples *.ipynb *.md
recursive-include examples *.html *.json *.py *.txt *.yaml *.pkl *.csv

# Template configs (used by CLI --template flag)
recursive-include src/glassalpha/templates *.yaml *.md

# Report templates (HTML/CSS for audit generation)
recursive-include src/glassalpha/report/templates *.html *.css *.js *.txt

# Evidence pack functionality
recursive-include src/glassalpha/evidence *.py
recursive-include src/glassalpha/evidence/templates *.txt

# PDF export functionality (new)
recursive-include src/glassalpha/report/exporters *.py
recursive-include src/glassalpha/report/cache.py
recursive-include src/glassalpha/report/export.py
recursive-include src/glassalpha/report/images.py

# Documentation files
recursive-include docs *.md

# Config templates (policy schemas, etc.) - exclude test configs
recursive-include src/glassalpha/configs *.yaml *.md
global-exclude test_*.yaml
global-exclude __pycache__

# Constraints for reproducibility
recursive-include constraints *.txt

# Tests (users may want to run tests after installation)
recursive-include tests *.py *.yaml *.md
recursive-include tests/evidence *.py

# Cache CLI command (new)
recursive-include src/glassalpha/cli/commands/cache.py

# Exclude development-only and temporary files
prune .ci
prune dev
prune scripts
prune site
prune venv
prune venv_test
prune notebook-test
prune temp-*
prune test-audit-project
prune .vscode
prune .ai-scratch
prune __pycache__
global-exclude *.pyc
global-exclude *.pyo
exclude Makefile
exclude *.sh
exclude ci-template.yml
exclude .coveragerc*
exclude .pre-commit-config.yaml
exclude .dockerignore
exclude setup-git-aliases.sh
exclude *.bak
exclude temp-*
exclude Dockerfile
exclude DETERMINISM_IMPLEMENTATION_COMPLETE.md
exclude CI_DETERMINISM_SOLUTION.md
exclude CI_FIXES_ROUND2.md
exclude DETERMINISM_FIX_PLAN.md
exclude DETERMINISM_FIX_PROMPT.md
exclude SOLUTION_*.md
exclude CI_FIXES_SUMMARY.md
# AI-generated analysis and planning docs (not for distribution)
exclude CI_*.md
exclude *_ANALYSIS.md
exclude *_PLAN.md
exclude fix-*.plan.md
exclude UX_*.md
exclude *_VALIDATION.md
exclude *_COMPLETE.md
exclude *_SUMMARY.md
exclude *_IMPROVEMENTS*.md
global-exclude test_*.html test_*.pdf test_*.pkl test_*.json
global-exclude *_simple_audit.html *_simple_audit.manifest.json
global-exclude malformed.yaml
