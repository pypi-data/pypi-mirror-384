<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_repair_order_form_inherit_sequence" model="ir.ui.view">
        <field name="name">repair.order.form.sequence</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids']/list" position="attributes">
                <attribute name="editable">bottom</attribute>
                <attribute name="default_order">sequence asc, id asc</attribute>
            </xpath>

            <xpath expr="//field[@name='move_ids']/list/field[1]" position="before">
                <field name="sequence" widget="handle" />
            </xpath>
        </field>
    </record>
</odoo>
