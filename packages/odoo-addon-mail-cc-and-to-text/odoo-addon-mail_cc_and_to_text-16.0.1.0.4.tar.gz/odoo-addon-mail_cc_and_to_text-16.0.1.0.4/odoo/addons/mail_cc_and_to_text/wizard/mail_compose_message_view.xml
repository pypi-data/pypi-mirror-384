<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="email_compose_message_wizard_form_cc_and_to" model="ir.ui.view">
            <field name="name">mail.compose.message.form.cc.and.to</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <field name="email_from" position="before">
                    <separator string=" " colspan="2"/>
                </field>
                <field name="email_from" position="after">
                    <field name="email_to" attrs="{'invisible':[('composition_mode', '!=', 'mass_mail')], 'required':[('composition_mode', '=', 'mass_mail')]}"/>
                    <field name="email_cc" attrs="{'invisible':[('composition_mode', '!=', 'mass_mail')]}"/>
                </field>
                <xpath expr="//notebook/page[last()]" position="replace">
                </xpath>
            </field>
        </record>
        <record id="email_compose_form_mass_mailing_cc_and_to" model="ir.ui.view">
            <field name="name">mail.compose.message.form.mass_mailing.cc_and_to</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mass_mailing.email_compose_form_mass_mailing"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mass_mailing_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='campaign_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>