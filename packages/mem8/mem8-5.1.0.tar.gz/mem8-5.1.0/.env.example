# mem8 Environment Configuration
# Copy this file to .env and customize for your environment
#
# Development: cp .env.example .env  (use defaults)
# Production:  cp .env.example .env  (change SECRET_KEY and passwords!)

# Project Name
COMPOSE_PROJECT_NAME=mem8

# Environment
NODE_ENV=development  # development | production
DEBUG=true            # true | false

# Database
POSTGRES_DB=mem8_dev
POSTGRES_USER=mem8_user
POSTGRES_PASSWORD=mem8_dev_password  # CHANGE IN PRODUCTION!
POSTGRES_PORT=5433                   # 5433 for dev (avoid conflicts), 5432 for prod

# Database URL (update if you change db settings)
DATABASE_URL=postgresql+asyncpg://mem8_user:mem8_dev_password@postgres:5432/mem8_dev

# Backend
BACKEND_PORT=8000
SECRET_KEY=dev-secret-key-not-for-production  # CHANGE IN PRODUCTION!
LOG_LEVEL=debug  # debug | info | warning | error

# Frontend
FRONTEND_PORT=22211
NEXT_PUBLIC_API_URL=http://localhost:8000  # Update for production domain

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# GitHub OAuth (optional - for auth features)
# GITHUB_CLIENT_ID=your_client_id
# GITHUB_CLIENT_SECRET=your_client_secret
