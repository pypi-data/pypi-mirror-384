{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "automergeType": "branch",
  "commitMessageLowerCase": "auto",
  "dependencyDashboard": true,
  "enabledManagers": [
    "github-actions",
    "pep723",
    "pep621",
    "pre-commit"
  ],
  "internalChecksAsSuccess": false,
  "internalChecksFilter": "strict",
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 5am on monday"
    ],
    "automerge": true
  },
  "minimumReleaseAge": "7 days",
  "platformAutomerge": false,
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "schedule": [
    "at any time"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "timezone": "America/Edmonton",
  "packageRules": [
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "assignees": [
        "MountainGod2"
      ]
    },
    {
      "description": "Auto-merge non-breaking updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Keep Python version pinned",
      "matchManagers": [
        "pep621"
      ],
      "ignoreDeps": [
        "python"
      ]
    },
    {
      "description": "Skip release age for self-references",
      "matchManagers": [
        "pep723"
      ],
      "matchDepNames": [
        "chaturbate-events"
      ],
      "minimumReleaseAge": "0"
    },
    {
      "description": "Group dev tools",
      "matchPackageNames": [
        "ruff",
        "mypy",
        "pylint",
        "pyright",
        "pytest",
        "pytest-*"
      ],
      "groupName": "dev-tools"
    },
    {
      "description": "Group build tools",
      "matchPackageNames": [
        "hatchling",
        "hatch-*",
        "python-semantic-release"
      ],
      "groupName": "build-tools"
    }
  ],
  "pep723": {
    "enabled": true,
    "managerFilePatterns": [
      "/examples/.*\\.py$/",
      "/examples/.*\\.pyw$/"
    ]
  },
  "pre-commit": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true
  }
}
