<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_restic" model="res.partner">
        <field name="name">Restic GmbH</field>
        <field name="email">admin@example.com</field>
    </record>

    <record id="sale_order_odoo" model="sale.order">
        <field name="partner_id" ref="res_partner_restic" />
        <field name="partner_invoice_id" ref="res_partner_restic" />
        <field name="partner_shipping_id" ref="res_partner_restic" />
        <field name="user_id" ref="base.user_admin" />
        <field
            name="date_order"
            eval="(DateTime.today() - relativedelta(days=1)).strftime('%Y-%m-%d %H:%M')"
        />
        <field name="project_name">restic</field>
        <field name="domain">restic.local</field>
        <field name="consulting_partner_id" ref="helm.res_partner_mint_system_demo" />
        <field name="cluster_id" ref="kubectl.kubectl_cluster_kind_demo" />
    </record>

    <record id="sale_order_line_odoo" model="sale.order.line">
        <field name="order_id" ref="sale_order_odoo" />
        <field name="product_id" ref="helm.product_odoo_community_edition" />
        <field name="product_uom_qty">1</field>
    </record>
</odoo>
