<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chart_odoo_value_ingress_host" model="helm.chart.value">
        <field name="chart_id" ref="helm.chart_odoo" />
        <field name="path">ingress.host</field>
        <field
            name="value"
        >order_id.project_name + '.' + release.cluster_id.domain</field>
        <field name="field_id" ref="helm.field_helm_release__namespace" />
    </record>

    <record id="chart_odoo_value_ingress_custom_domain" model="helm.chart.value">
        <field name="chart_id" ref="helm.chart_odoo" />
        <field name="path">ingress.customDomain</field>
        <field name="value">order_id.domain</field>
    </record>

    <record id="chart_odoo_value_init_login" model="helm.chart.value">
        <field name="chart_id" ref="helm.chart_odoo" />
        <field name="path">initLogin</field>
        <field name="value">order_id.partner_id.email</field>
    </record>
</odoo>
