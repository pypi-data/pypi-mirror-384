<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale_helm.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button
                    type="object"
                    name="action_view_release"
                    class="oe_stat_button"
                    icon="fa-cloud-upload"
                    invisible="release_count == 0"
                >
                    <field name="release_count" widget="statinfo" string="Releases" />
                </button>
            </xpath>

            <page name="other_information" position="before">
                <page string="Helm" name="helm">
                    <group>
                        <group>
                            <field name="project_name" />
                            <field name="domain" />
                            <field name="consulting_partner_id" />
                            <field name="cluster_id" />
                        </group>
                        <group>
                            <field name="chart_ids">
                                <list />
                            </field>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
