<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="save_file_wizard_view_sinli" model="ir.ui.view">
            <field name="name">save.files.wizard.form.sinli</field>
            <field name="model">save.file.wizard</field>
            <field name="arch" type="xml">
                <form string="File download">
                    <group cols="2">
                        <div>
                            <field name="file_name" invisible="1" />
                            <field name="file_content" filename="file_name" nolabel="1" />
                        </div>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" type="object" />
                    </footer>
                </form>
            </field>
        </record>
</odoo>