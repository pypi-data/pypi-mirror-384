<odoo>
    <record id="res_config_settings_view_form_editorial" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sinli</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='gestion_editorial']" position="inside">
                <h2>Configuraci√≥n SINLI</h2>
                <div class="row mt16 o_settings_container" name="sinli_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sinli_id" class="d-block"/>
                            <field name="sinli_id" />
                            <button name="generate_random_sinli_test_id" class="btn btn-info ms-2" type="object">Generarate test ID</button>
                            <div class="text-muted">
                                Company identifier to send and receive SINLI messages.
                                Supported format: LIBnnnnn / Lnnnnnnn / Xnnnnnnn, where 'n' is a number.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sinli_email" class="d-block"/>
                            <field name="sinli_email"/>
                            <div class="text-muted">
                                Company email to send and receive SINLI messages
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <h2 class="mb-3">Tarifas por defecto para ventas importadas desde SINLI</h2>
                        <div class="o_setting_right_pane mt-2">
                            <label for="sinli_default_pricelist_firm_sale" class="d-block"/>
                            <field name="sinli_default_pricelist_firm_sale" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sinli_default_pricelist_deposit_sale" class="d-block"/>
                            <field name="sinli_default_pricelist_deposit_sale" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sinli_default_pricelist_fair_sale" class="d-block"/>
                            <field name="sinli_default_pricelist_fair_sale" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sinli_default_pricelist_other_sale" class="d-block"/>
                            <field name="sinli_default_pricelist_other_sale" />
                        </div>
                    </div>

                </div>

            </xpath>
        </field>
    </record>
</odoo>
