<?xml version="1.0"?>
<odoo>
	<data>
		<record id="purchase_order_inherit_view" model="ir.ui.view">
			<field name="name">Sinli export purchase order</field>
			<field name="model">purchase.order</field>
			 <field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<header>
                    <button name="action_sinli_export_purchase_order" 
                    string="Export order to SINLI"
                    type="object" 
                    icon="fa-envelope"
					invisible="state != 'purchase'"
                    class="btn-primary"/>
				</header>
			</field>
		</record>
	</data>
</odoo>
