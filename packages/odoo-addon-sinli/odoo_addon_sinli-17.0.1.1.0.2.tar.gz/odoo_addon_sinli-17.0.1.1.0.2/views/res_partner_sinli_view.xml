<odoo>
  <record id="res_partner_sinli_form_view" model="ir.ui.view">
    <field name="name">res.partner.sinli.form.view</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//label[@for='is_author']" position="after">
        <field name="speak_sinli"/>
        <label for="speak_sinli"/>
      </xpath>
      <xpath expr="//div[field[@name='vat']]" position="after">
          <field name="sinli_id" />
          <field name="sinli_email" />
      </xpath>
    
    </field>
  </record>
</odoo>
