ModalScreen {
    align: center middle;
}

ModalScreen Grid {
    grid-columns: auto;
    grid-gutter: 1 2;
    width: auto;
    height: auto;
    padding: 1 3;
    border: round dimgrey;
    background: $surface;
}

ModalScreen #buttons {
    grid-size: 2;
    column-span: 2;
    grid-gutter: 1 2;
    padding: 0 3;
    border: none;
    width: 1fr;
    align-horizontal: center;
}
