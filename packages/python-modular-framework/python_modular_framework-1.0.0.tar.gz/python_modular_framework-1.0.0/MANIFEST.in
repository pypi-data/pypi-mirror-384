# 包含许可证文件
include LICENSE
include README.md
include CHANGELOG.md
include requirements.txt

# 包含文档
recursive-include docs *.rst *.md *.txt *.py
recursive-include docs/_static *
recursive-include docs/_templates *

# 包含示例
recursive-include examples *.py *.md
recursive-include example_plugins *.py

# 包含配置文件
include pyproject.toml
include setup.py
include .flake8
include quality_check.py
include build_docs.py
include Makefile

# 包含报告文档
include *.md

# 排除不需要的文件
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
exclude .git*
exclude .DS_Store
exclude *.egg-info
exclude .pytest_cache
exclude .mypy_cache
exclude .coverage
exclude htmlcov
exclude bandit-report.json
exclude coverage.json
exclude coverage.xml

# 排除临时文件
exclude *.tmp
exclude *.temp
exclude *.log
exclude *.bak
exclude *~
