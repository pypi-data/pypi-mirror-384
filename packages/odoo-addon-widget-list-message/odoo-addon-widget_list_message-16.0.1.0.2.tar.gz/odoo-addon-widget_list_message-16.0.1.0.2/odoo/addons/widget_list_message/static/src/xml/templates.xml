<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- List Message Grouped Fields Template -->
    <t t-name="widget_list_message.ListMessageGroupField" owl="1">
        <div class="o_message_content_wrapper">
            <t t-foreach="groupedData" t-as="group" t-key="group.key">
                <div class="o_message_group">
                    <t t-foreach="group.fields" t-as="field" t-key="field.key">
                        <span class="o_message_group_field">
                            <t t-out="field.val" type="html"/>
                        </span>
                    </t>
                </div>
            </t>
        </div>
    </t>
    <!-- List Message Tooltip Template -->
    <t t-name="widget_list_message.ListMessageTooltip" owl="1">
        <div class="o_custom_tooltip">
            <p t-if="message.email_from">
                <strong>Email From: </strong>
                <span t-esc="message.email_from"/>
            </p>
            <p t-if="message.email_to">
                <strong>Email To: </strong>
                <span t-esc="message.email_to"/>
            </p>
            <p t-if="message.email_cc">
                <strong>Email CC: </strong>
                <span t-esc="message.email_cc"/>
            </p>
        </div>
    </t>
    <!-- List View Relative Dates -->
    <t t-name="widget_list_message.RelativeDateField" owl="1">
        <span t-esc="formattedDate"/>
    </t>
</templates>