{
    "actions": [
        {
            "add": {
                "index": "{{ index }}",
                "alias": "{{ alias }}",
                "filter": {
                    "terms": {
                        "azure.subscription_id": [
                        {% for subscription_id in subscription_ids %}
                            "{{ subscription_id }}"{% if not loop.last %},{% endif %}
                        {% endfor %}
                        ]
                    }
                }
            }
        }
    ]
}
