<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="email_compose_message_automatic_stage_changes_wizard_form">
            <field name="name">mail.compose.message.automatic.stage.changes.wizard.form</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]/div/group/field[@name='template_id']" position="before">
                    <field
                        name="when_odoo_responds_change_stage_to_id"
                        widget="selection"
                        attrs="{'invisible':[('composition_mode', '!=', 'mass_mail')]}"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
