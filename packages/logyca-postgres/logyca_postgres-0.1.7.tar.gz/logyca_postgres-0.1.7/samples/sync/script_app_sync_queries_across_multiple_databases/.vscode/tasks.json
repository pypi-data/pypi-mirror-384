{
  // Ejecutar con: Terminal ó "Ctrl + Shift + P" → Run Task… → “label”.
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PowerShell Create virtual environment",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoLogo",
        "-NoExit",
        "-Command",
        "Set-Location -Path ''${workspaceFolder}'' ; ",
        "write-host ''${workspaceFolder}'' ; ",
        "$python_bin = ''C:\\python\\python313\\python.exe'' ; Write-Host python_bin = $python_bin ;",
        "& $python_bin -m pip install --upgrade pip ; ",
        "& $python_bin -m pip install virtualenv --upgrade ; ",
        "& $python_bin -m virtualenv venv ; ",
        "& .\\venv\\Scripts\\activate ; ",
        "python -m pip install --upgrade pip ; ",
        "pip install -r .\\requirements.txt ; ",
      ],
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    },
    {
      "label": "PowerShell Delete Temporary Files",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoLogo",
        "-NoExit",
        "-Command",
        "Set-Location -Path ''${workspaceFolder}'' ; ",
        "Get-ChildItem -Path . -Recurse -Force -Directory -Filter venv | Remove-Item -Recurse -Force ; ",
        "Get-ChildItem -Path . -Recurse -Force -Directory -Filter __pycache__ | Remove-Item -Recurse -Force ; ",
      ],
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    }
  ]
}
