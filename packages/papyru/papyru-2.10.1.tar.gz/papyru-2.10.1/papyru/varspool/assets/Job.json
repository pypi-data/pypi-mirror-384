{
  "required": [
    "id",
    "status_history",
    "location"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "example": 123
    },
    "location": {
      "type": "string",
      "format": "url",
      "example": "https://varspool/queues/my-queue/jobs/123/status"
    },
    "status_history": {
      "$schema": "file://./JobStatusHistory.json"
    }
  },
  "example": {
    "id": 1338,
    "status_history": {
      "location": "https://varspool/queues/papas-printdata/jobs/123/status",
      "items": [
        {
          "status": "open",
          "checksum": "0000000000000000000000000000000",
          "date": "1970-01-01T00:00:00+00:00",
          "data": {
            "url": "https://example.org/some_image.svg",
            "data_sink": "https://printdata.imagestore/images",
            "filters": {
              "stretch": {
                "width": 1920,
                "height": 1060
              },
              "rotate": "landscape",
              "convert": "image/jpeg"
            }
          }
        },
        {
          "status": "in_progress",
          "checksum": "0000000000000000000000000000001",
          "date": "1970-01-01T00:10:00+00:00",
          "data": {
            "node": "deadpool-03",
            "pod": "imagestore-worker-foo32",
            "worker-pid": 1234
          }
        },
        {
          "status": "failed",
          "checksum": "0000000000000000000000000000002",
          "date": "1970-01-01T01:12:00+00:00",
          "data": {
            "message": "timed out"
          }
        },
        {
          "status": "open",
          "checksum": "0000000000000000000000000000003",
          "date": "1970-01-01T01:12:00+00:00"
        },
        {
          "status": "in_progress",
          "checksum": "0000000000000000000000000000004",
          "date": "1970-01-01T02:00:00+00:00",
          "data": {
            "node": "deadpool-12",
            "pod": "imagestore-worker-foo64",
            "worker-pid": 4321
          }
        },
        {
          "status": "done",
          "checksum": "0000000000000000000000000000005",
          "date": "1970-01-01T02:22:00+00:00",
          "data": {
            "location": "https://printdata.imagestore/images/123"
          }
        }
      ]
    }
  },
  "additionalProperties": false
}
