<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="widget_mail_composer_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">widget.mail.composer.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='helpdesk_mgmt']" position="inside">
                <div class="support_contact_tag">
                    <h2>Support Contact Tag:</h2>
                    <div class="row mt16 o_settings_container">
                        <group>
                            <field name="support_contact_tag_id" />
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
