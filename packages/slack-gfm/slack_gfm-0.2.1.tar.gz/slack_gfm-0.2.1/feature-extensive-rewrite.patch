+        channel_name = self.channel_map.get(node.channel_id)
+        if channel_name:
+            return ChannelMention(
+                channel_id=node.channel_id,
+                channel_name=channel_name,
+                children=node.children
+            )
+        return node
+
+    # ... handle other mention types
