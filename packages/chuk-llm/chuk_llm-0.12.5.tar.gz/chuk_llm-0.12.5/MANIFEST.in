# Include documentation
include README.md

# Include package files
recursive-include src/chuk_llm *.py

# Include YAML configuration files - CRITICAL for package distribution
recursive-include src/chuk_llm *.yaml *.yml

# Include any resources
recursive-include src/chuk_llm/resources *.json *.txt

# Exclude development and temporary files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude *.egg
global-exclude .coverage
global-exclude htmlcov
global-exclude .pytest_cache