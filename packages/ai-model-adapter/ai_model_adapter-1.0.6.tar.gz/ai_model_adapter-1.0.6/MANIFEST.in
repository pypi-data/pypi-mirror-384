# 包含必要的文档文件
include README.md
include LICENSE
include CHANGELOG.md
include SECURITY.md
include requirements.txt

# 包含配置文件
include pyproject.toml
include setup.py
include setup.cfg

# 包含测试文件
include test_*.py
include run_tests.py

# 包含演示文件
include demo.py

# 排除不必要的文件
exclude .gitignore
exclude .github/*
exclude .vscode/*
exclude .idea/*
exclude *.pyc
exclude __pycache__/*
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.orig
recursive-exclude * *.rej
recursive-exclude * *~
recursive-exclude * .DS_Store
