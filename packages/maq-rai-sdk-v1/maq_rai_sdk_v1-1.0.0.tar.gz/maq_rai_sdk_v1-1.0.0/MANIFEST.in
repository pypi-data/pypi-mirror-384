include README.md
include LICENSE
include MANIFEST.in
include pyproject.toml
include setup.py

# Include all Python files
recursive-include maq_rai_sdk *.py
recursive-include maq_rai_sdk *.pyi
recursive-include maq_rai_sdk py.typed

# Include documentation
include *.md
include *.rst
include *.txt

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude test files from distribution
recursive-exclude tests *
recursive-exclude test *
exclude tox.ini
exclude .coveragerc
exclude .pytest_cache