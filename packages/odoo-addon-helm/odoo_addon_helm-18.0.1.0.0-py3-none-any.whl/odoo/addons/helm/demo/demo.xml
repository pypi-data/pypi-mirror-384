<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_mint_system_demo" model="res.partner">
        <field name="name">Mint System GmbH</field>
        <field
            name="helm_product_ids"
            eval="[(4, ref('product_odoo_community_edition')),(4, ref('product_odoo_enterprise_edition'))]"
        />
    </record>

    <record id="chart_odoo_value_ingress_classname_demo" model="helm.chart.value">
        <field name="chart_id" ref="helm.chart_odoo" />
        <field
            name="filter_cluster_ids"
            eval="[(4, ref('kubectl.kubectl_cluster_exo_demo'))]"
        />
        <field name="path">ingress.className</field>
        <field name="value">'haproxy'</field>
    </record>

    <record id="chart_odoo_value_vshnpostgres_enabled_demo" model="helm.chart.value">
        <field name="chart_id" ref="helm.chart_odoo" />
        <field
            name="filter_cluster_ids"
            eval="[(4, ref('kubectl.kubectl_cluster_exo_demo'))]"
        />
        <field name="path">vshnPostgres.enabled</field>
        <field name="value">True</field>
    </record>

    <record id="chart_odoo_value_cnpg_enabled_demo" model="helm.chart.value">
        <field name="chart_id" ref="helm.chart_odoo" />
        <field
            name="filter_cluster_ids"
            eval="[(4, ref('kubectl.kubectl_cluster_exo_demo'))]"
        />
        <field name="path">cnpg.enabled</field>
        <field name="value">False</field>
    </record>

    <record id="odoo_release_demo" model="helm.release">
        <field name="name">odoo</field>
        <field name="chart_id" ref="helm.chart_odoo" />
        <field name="context_id" ref="kubectl.kubectl_context_kind_demo" />
        <field name="partner_id" ref="helm.res_partner_mint_system_demo" />
        <field name="create_namespace" eval="True" />
        <field name="namespace">odoo</field>
    </record>

    <record id="odoo_chart_secret_demo" model="helm.chart.secret">
        <field name="name">odoo-creds</field>
        <field name="chart_id" ref="helm.chart_odoo" />
    </record>
    <record id="odoo_chart_secret_data_demo" model="helm.chart.secret.data">
        <field name="key">GITHUB_USERNAME</field>
        <field name="value">bot-mintsys</field>
        <field name="secret_id" ref="odoo_chart_secret_demo" />
    </record>
</odoo>
