<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helm_repo_form_view" model="ir.ui.view">
        <field name="name">helm.helm_repo_form_view</field>
        <field name="model">helm.repo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                    />
                    <button
                        name="action_add"
                        string="Add"
                        type="object"
                        invisible="state == 'added'"
                    />
                    <button
                        name="action_update"
                        string="Update"
                        type="object"
                        invisible="state == 'draft'"
                    />
                    <button
                        name="action_remove"
                        string="Remove"
                        type="object"
                        invisible="state == 'draft'"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="url" widget="url" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helm_repo_list_view" model="ir.ui.view">
        <field name="name">helm.helm_repo_list_view</field>
        <field name="model">helm.repo</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="url" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="helm_repo_search_view" model="ir.ui.view">
        <field name="name">helm.helm_repo_search_view</field>
        <field name="model">helm.repo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="url" />
                <filter name="added" string="Added" domain="[('state','=', 'added')]" />
            </search>
        </field>
    </record>

    <record id="action_helm_repo_view" model="ir.actions.act_window">
        <field name="name">Repos</field>
        <field name="res_model">helm.repo</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="helm_repo_search_view" />
    </record>

    <menuitem
        id="helm.menu_root"
        name="Helm"
        web_icon="helm,static/description/icon.png"
    />
    <menuitem
        id="helm.menu_helm_repo"
        name="Repos"
        parent="helm.menu_root"
        action="helm.action_helm_repo_view"
        sequence="30"
    />
</odoo>
