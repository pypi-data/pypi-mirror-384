<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helm_chart_form_view" model="ir.ui.view">
        <field name="name">helm.helm_chart_form_view</field>
        <field name="model">helm.chart</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" invisible="1" />
                    <button
                        string="Release"
                        name="action_release"
                        type="object"
                        invisible="state != 'added'"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="repo_id" />
                    </group>
                    <notebook>
                        <page string="Values" name="values">
                            <group string="Dynamic values">
                                <field
                                    name="value_ids"
                                    nolabel="1"
                                    context="{'default_chart_id': id}"
                                >
                                    <list context="{'default_chart_id': id}">
                                        <field name="filter_cluster_ids" />
                                        <field name="path" />
                                        <field name="value" />
                                        <field name="field_id" />
                                    </list>
                                </field>
                            </group>
                            <group>
                                <group string="Chart values.yaml">
                                    <field
                                        name="values"
                                        nolabel="1"
                                        class="terminal-screen"
                                    />
                                </group>
                                <group string="Predefined values">
                                    <field
                                        name="release_value_ids"
                                        nolabel="1"
                                        context="{'default_release_chart_id': id}"
                                    >
                                        <list>
                                            <field name="path" />
                                            <field
                                                name="option_id"
                                                context="{'default_value_id': id}"
                                            />
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page string="Secrets" name="secrets">
                            <group>
                                <field
                                    name="secret_ids"
                                    nolabel="1"
                                    context="{'default_chart_id': id}"
                                >
                                    <list
                                        context="{'default_secret_id': id}"
                                        editable="bottom"
                                    >
                                        <field name="name" />
                                        <field name="data_ids" />
                                        <button
                                            name="action_show_details"
                                            title="Show Details"
                                            type="object"
                                            icon="fa-list"
                                        />
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Products" name="products">
                            <field name="product_ids">
                                <list />
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helm_chart_list_view" model="ir.ui.view">
        <field name="name">helm.helm_chart_list_view</field>
        <field name="model">helm.chart</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="repo_id" />
            </list>
        </field>
    </record>

    <record id="helm_chart_search_view" model="ir.ui.view">
        <field name="name">helm.helm_chart_search_view</field>
        <field name="model">helm.chart</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="repo_id" />
            </search>
        </field>
    </record>

    <record id="action_helm_chart_view" model="ir.actions.act_window">
        <field name="name">Charts</field>
        <field name="res_model">helm.chart</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="helm_chart_search_view" />
    </record>

    <menuitem
        id="helm.menu_helm_chart"
        name="Charts"
        parent="helm.menu_root"
        action="helm.action_helm_chart_view"
        sequence="20"
    />
</odoo>
