<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helm_release_form_view" model="ir.ui.view">
        <field name="name">helm.helm_release_form_view</field>
        <field name="model">helm.release</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                    />
                    <button
                        name="action_install"
                        string="Install"
                        type="object"
                        invisible="state == 'installed'"
                    />
                    <button
                        name="action_uninstall"
                        string="Uninstall"
                        type="object"
                        confirm="Do you really want to delete the deployment?"
                        invisible="state == 'draft'"
                    />
                    <button
                        name="action_upgrade"
                        string="Upgrade"
                        type="object"
                        invisible="state == 'draft'"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="state == 'installed'" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="chart_id" />
                                    <field name="context_id" />
                                    <field
                                        name="create_namespace"
                                        invisible="namespace_id"
                                    />
                                    <field
                                        name="namespace"
                                        invisible="create_namespace == False or namespace_id"
                                        required="True"
                                    />
                                    <field
                                        name="namespace_id"
                                        invisible="namespace_id == False"
                                    />
                                    <field name="partner_id" />
                                    <field name="ingress_url" widget="url" />
                                </group>
                                <group string="Updatable values">
                                    <field
                                        name="value_ids"
                                        nolabel="1"
                                        context="{'default_release_id': id}"
                                    >
                                        <list>
                                            <field name="path" />
                                            <field
                                                name="option_id"
                                                context="{'default_value_id': id}"
                                            />
                                        </list>
                                    </field>
                                </group>
                                <group string="values.yaml">
                                    <field
                                        name="values"
                                        nolabel="1"
                                        class="terminal-screen"
                                    />
                                </group>
                                <group string="Last Output">
                                    <field
                                        name="output"
                                        nolabel="1"
                                        class="terminal-screen"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helm_release_list_view" model="ir.ui.view">
        <field name="name">helm.helm_release_list_view</field>
        <field name="model">helm.release</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="chart_id" />
                <field name="context_id" />
                <field name="partner_id" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="helm_release_search_view" model="ir.ui.view">
        <field name="name">helm.helm_release_search_view</field>
        <field name="model">helm.release</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="partner_id" />
                <filter
                    name="installed"
                    string="Installed"
                    domain="[('state','=', 'installed')]"
                />
            </search>
        </field>
    </record>

    <record id="action_helm_release_view" model="ir.actions.act_window">
        <field name="name">Releases</field>
        <field name="res_model">helm.release</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="helm_release_search_view" />
    </record>

    <menuitem
        id="helm.menu_helm_release"
        name="Releases"
        parent="helm.menu_root"
        action="helm.action_helm_release_view"
        sequence="10"
    />
</odoo>
