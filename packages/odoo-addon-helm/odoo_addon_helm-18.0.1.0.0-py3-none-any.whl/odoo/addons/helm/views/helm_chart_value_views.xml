<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helm_chart_value_list_view" model="ir.ui.view">
        <field name="name">helm.helm_chart_value_list_view</field>
        <field name="model">helm.chart.value</field>
        <field name="arch" type="xml">
            <list>
                <field name="path" />
                <field name="field_id" />
            </list>
        </field>
    </record>

    <record id="helm_chart_value_from_view" model="ir.ui.view">
        <field name="name">helm.helm_chart_value_from_view</field>
        <field name="model">helm.chart.value</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="filter_cluster_ids" widget="many2many_tags" />
                            <field name="path" />
                            <field name="value" />
                            <field
                                name="option_id"
                                context="{'default_value_id': id}"
                            />
                            <field name="field_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
