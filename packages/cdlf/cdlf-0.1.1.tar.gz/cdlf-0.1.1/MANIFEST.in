# Include the README and LICENSE
include README.md
include LICENSE
include CLAUDE.md
include pytest.ini

# Include all package data
recursive-include cdlf *.py

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]

# Exclude tests and examples from distribution
prune tests
prune examples
prune .github
prune docs/_build

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude Makefile
