set -o errexit
set -o nounset
set -o pipefail

git \
    -c "advice.detachedHead=false" \
    clone \
    --depth 1 \
    --branch "$XZ_UTILS_REV" \
    "$XZ_UTILS_URL" \
    "$XZ_UTILS_DIR"
