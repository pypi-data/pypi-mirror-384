{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "Schema for Acedeploy clone refresh",
  "additionalProperties": false,
  "required": [
    "schemasToClone"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "title": "The json schema for this file."
    },
    "schemasToClone": {
      "type": "object",
      "title": "The schemas to clone",
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "additionalProperties": false,
          "oneOf": [
            {
              "required": [
                "tablesToSkip"
              ]
            },
            {
              "required": [
                "tablesToInclude"
              ]
            }
          ],
          "properties": {
            "tablesToSkip": {
              "type": "array",
              "title": "Tables in this list will not be cloned (if they exist).",
              "items": {
                "type": "string"
              }
            },
            "tablesToInclude": {
              "type": "array",
              "title": "Only tables in this list will be cloned (if they exist).",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
