<div class="carousel slide my-5"
     id="DynamicPageSlider"
     tal:define="
       elements view/elements;
     "
     tal:condition="elements"
>
  <div class="carousel-indicators">
    <tal:indicators repeat="element elements">
      <button class="active"
              aria-current="true"
              aria-label="Slide ${repeat/element/index}"
              type="button"
              data-bs-slide-to="${repeat/element/index}"
              data-bs-target="#DynamicPageSlider"
              i18n:attributes="aria-label"
      ></button>
    </tal:indicators>
  </div>
  <div class="carousel-inner">
    <tal:slides repeat="brain elements">
      <div class="carousel-item active"
           tal:define="
             element brain/getObject;
           "
           tal:attributes="
             class python: repeat['brain'].index == 0 and 'carousel-item active' or 'carousel-item';
           "
      >
        <tal:image tal:define="
                     image element/related_image_object;
                   "
                   tal:condition="image"
        >
          <img tal:define="
                 images image/@@images;
               "
               tal:replace="structure python:images.srcset(fieldname='image',
                                              scale_in_src='huge',
                                              sizes='(min-width: 1400px) 1400px, 100vw',
                                              alt=image.Title() ,
                                              title=image.Title())"
          />
        </tal:image>
        <div class="carousel-caption d-none d-md-block">
          <h5>${element/Title}</h5>
          <p>${element/Description}</p>
          <a href="${element/link_url}"
             tal:condition="element/link_url"
          >${element/link_text}</a>
        </div>
      </div>
    </tal:slides>
  </div>
  <button class="carousel-control-prev"
          type="button"
          data-bs-slide="prev"
          data-bs-target="#DynamicPageSlider"
  >
    <span class="carousel-control-prev-icon"
          aria-hidden="true"
    ></span>
    <span class="visually-hidden"
          i18n:translate=""
    >Previous</span>
  </button>
  <button class="carousel-control-next"
          type="button"
          data-bs-slide="next"
          data-bs-target="#DynamicPageSlider"
  >
    <span class="carousel-control-next-icon"
          aria-hidden="true"
    ></span>
    <span class="visually-hidden"
          i18n:translate=""
    >Next</span>
  </button>
</div>
