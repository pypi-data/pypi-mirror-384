<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="helpdesk_mgmt.HelpdeskDashboard">
        <div class="o_helpdesk_team_dashboard container-fluid border-bottom bg-view">
            <div class="justify-content-between gap-3 gap-lg-0 o_form_view">
                <div
                    class="oe_button_box o-form-buttonbox d-print-none d-grid"
                    t-attf-style="grid-template-columns: repeat({{ state.gridTemplateColumns }}, 1fr);"
                >
                    <t t-foreach="helpdeskData" t-as="section" t-key="section_index">
                        <ViewButton
                            t-if="section.show"
                            onClick="() => this.action.doAction(section.action)"
                            title="section.name"
                            defaultRank="'oe_stat_button'"
                            disabled="false"
                            icon="section.icon"
                            clickParams="clickParams(section)"
                        >
                            <t t-set-slot="contents">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value text-start">
                                        <t t-esc="section.value" />
                                    </span>
                                    <span class="o_stat_text">
                                        <t t-esc="section.name" />
                                    </span>
                                </div>
                            </t>
                        </ViewButton>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
