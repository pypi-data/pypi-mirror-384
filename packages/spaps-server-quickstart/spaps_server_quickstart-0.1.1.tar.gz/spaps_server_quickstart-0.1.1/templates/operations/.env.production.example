# Core settings
APP_NAME=Quickstart Service
ENV=prod
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/app

# SPAPS integration
SPAPS_API_URL=https://api.sweetpotato.dev
SPAPS_API_KEY=replace-with-prod-key
SPAPS_APPLICATION_ID=replace-with-app-id
SPAPS_AUTH_ENABLED=true
SPAPS_AUTH_EXEMPT_PATHS=/health

# GHCR image reference used by docker-compose
SPAPS_IMAGE=ghcr.io/example/service:latest

# CORS configuration
CORS_ALLOW_ORIGINS=https://app.example.com,https://admin.example.com
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
CORS_EXPOSE_HEADERS=X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

# Stripe / payments placeholder
STRIPE_SECRET_KEY=sk_live_example
STRIPE_WEBHOOK_SECRET=whsec_example

# Redis optional
REDIS_URL=redis://redis:6379/0
