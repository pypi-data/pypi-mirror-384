# Zoho Creator SDK Configuration
# Copy this file to .env and fill in your credentials

# OAuth2 Credentials (required for OAuth2 authentication)
ZOHO_CREATOR_CLIENT_ID=your_client_id_here
ZOHO_CREATOR_CLIENT_SECRET=your_client_secret_here
ZOHO_CREATOR_REDIRECT_URI=your_redirect_uri_here  # Optional if using server-side auth
ZOHO_CREATOR_REFRESH_TOKEN=your_refresh_token_here

# API Configuration
ZOHO_CREATOR_DATACENTER=US  # Options: US, EU, IN, AU, CA (default: US)
ZOHO_CREATOR_TIMEOUT=30  # Request timeout in seconds (default: 30)
ZOHO_CREATOR_MAX_RETRIES=3  # Number of retry attempts (default: 3)
ZOHO_CREATOR_RETRY_DELAY=1.0  # Initial delay between retries in seconds (default: 1.0)

# Additional API Configuration Options
ZOHO_CREATOR_MAX_RECORDS_PER_REQUEST=200  # Max records per request (200, 500, or 1000; default: 200)
ZOHO_CREATOR_MAX_REFRESH_TOKENS_PER_MINUTE=5  # Rate limit for token refresh (default: 5)
ZOHO_CREATOR_MAX_REFRESH_TOKENS_PER_USER=20  # Maximum refresh tokens per user (default: 20)

# Debugging (optional)
ZOHO_CREATOR_DEBUG=false  # Enable debug logging (default: false)
ZOHO_CREATOR_LOG_LEVEL=INFO  # Log level (default: INFO)