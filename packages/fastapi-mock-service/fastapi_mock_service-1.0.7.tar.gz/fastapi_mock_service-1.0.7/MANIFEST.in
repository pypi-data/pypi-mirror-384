include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include templates
recursive-include fastapi_mock_service/templates *.html
recursive-include fastapi_mock_service/templates *.css
recursive-include fastapi_mock_service/templates *.js

# Include Python files
recursive-include fastapi_mock_service *.py

# Exclude development and cache files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__/*
global-exclude .git/*
global-exclude .pytest_cache/*
global-exclude *.egg-info/*