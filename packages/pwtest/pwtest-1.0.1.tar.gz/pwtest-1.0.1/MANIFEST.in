# 包含项目元数据文件
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include requirements.txt

# 包含框架核心文件
recursive-include pwtest *.py
recursive-include pwtest *.ini
recursive-include pwtest py.typed

# 排除不需要的文件
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * *.pyd
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * *.so
recursive-exclude * *.dylib

# 排除示例和测试相关文件
prune examples
prune tests
prune .pytest_cache
prune .mypy_cache
prune .tox
prune allure-results
prune allure-report
prune logs
prune reports
prune screenshots
prune videos
prune tracings

# 排除构建和分发文件
prune build
prune dist
prune *.egg-info

# 排除开发配置文件
exclude .gitignore
exclude .flake8
exclude .coveragerc
exclude tox.ini
