{
    "domain": "healthcare_analytics",
    "description": "Healthcare patient metrics and analytics for aggregation analysis",
    "version": "1.0.0",
    "categories": [
        {
            "name": "Patient Metrics",
            "description": "Clinical measurements and vital signs",
            "entities": [
                {
                    "name": "Patient Vital Signs",
                    "description": "Patient health metrics and measurements",
                    "attributes": [
                        {
                            "name": "patient_id",
                            "type": "string",
                            "constraints": [
                                "primary_key",
                                "not_null",
                                "unique"
                            ]
                        },
                        {
                            "name": "visit_date",
                            "type": "date",
                            "constraints": [
                                "not_null"
                            ]
                        },
                        {
                            "name": "blood_pressure_systolic",
                            "type": "integer",
                            "constraints": [
                                "not_null",
                                "range:70-200"
                            ]
                        },
                        {
                            "name": "blood_pressure_diastolic",
                            "type": "integer",
                            "constraints": [
                                "not_null",
                                "range:40-130"
                            ]
                        },
                        {
                            "name": "heart_rate",
                            "type": "integer",
                            "constraints": [
                                "not_null",
                                "range:40-200"
                            ]
                        },
                        {
                            "name": "temperature",
                            "type": "float",
                            "constraints": [
                                "not_null",
                                "range:95.0-105.0"
                            ]
                        },
                        {
                            "name": "weight",
                            "type": "float",
                            "constraints": [
                                "not_null",
                                "range:20.0-300.0"
                            ]
                        },
                        {
                            "name": "glucose_level",
                            "type": "integer",
                            "constraints": [
                                "not_null",
                                "range:40-400"
                            ]
                        },
                        {
                            "name": "department",
                            "type": "string",
                            "constraints": [
                                "not_null"
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "business_rules": [
        "Patient IDs must be unique across the system",
        "Visit dates cannot be in the future",
        "Vital signs must be within normal medical ranges",
        "Each patient can have multiple visits over time"
    ],
    "data_quality_standards": {
        "completeness_threshold": 0.95,
        "accuracy_threshold": 0.90,
        "consistency_threshold": 0.85,
        "timeliness_threshold": 0.80
    },
    "compliance_requirements": [
        "HIPAA compliance for patient data privacy",
        "PHI data protection standards",
        "Clinical data accuracy requirements"
    ],
    "aggregation_scenarios": [
        {
            "name": "Patient Trend Analysis",
            "description": "Analyze patient health trends over time",
            "group_by_fields": [
                "patient_id",
                "department"
            ],
            "aggregation_fields": [
                "blood_pressure_systolic",
                "blood_pressure_diastolic",
                "heart_rate",
                "temperature",
                "weight",
                "glucose_level"
            ],
            "methods": [
                "mean",
                "min",
                "max",
                "trend"
            ]
        },
        {
            "name": "Department Performance",
            "description": "Compare performance metrics across departments",
            "group_by_fields": [
                "department"
            ],
            "aggregation_fields": [
                "blood_pressure_systolic",
                "blood_pressure_diastolic",
                "heart_rate",
                "temperature",
                "weight",
                "glucose_level"
            ],
            "methods": [
                "mean",
                "median",
                "std",
                "count"
            ]
        }
    ]
}