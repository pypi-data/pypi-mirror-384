{
    "openapi": "3.0.1",
    "info": {
        "title": "RAI Agent SDK",
        "version": "1.0.0",
        "description": "Azure functions for reviewing and updating prompts"
    },
    "servers": [
    {
      "url": "https://func-rai-agent-eus.azurewebsites.net/api"
    }
    ],
    "components": {
        "securitySchemes": {
            "apiKeyHeader": {
                "type": "apiKey",
                "name": "Ocp-Apim-Subscription-Key",
                "in": "header"
            }
        }
    },
    "security": [
        {
            "apiKeyHeader": []
        }
    ],
    "paths": {
    "/Reviewer": {
      "post": {
        "summary": "Review and update a prompt",
        "operationId": "reviewer_post",
        "security": [
          {
            "function_key": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "example": "Generate a sales forecast for next quarter"
                  },
                  "need_metrics": {
                    "type": "boolean",
                    "example": true
                  }
                },
                "required": ["prompt","need_metrics"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Prompt reviewed and updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "review_result": { "type": "object" },
                    "updated_result": { "type": "object" },
                    "review_of_updated_prompt": { "type": "object" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid function key"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/Testcase_generator": {
      "post": {
        "summary": "Generate testcases from a prompt",
        "operationId": "testcase_generator_post",
        "security": [
          {
            "function_key": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "example": "Validate login functionality"
                  },
                  "number_of_testcases": {
                    "type": "integer",
                    "example": 3
                  },
                  "user_categories": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["Admin", "Guest"]
                  },
                  "need_metrics": {
                    "type": "boolean",
                    "example": true
                  }
                },
                "required": ["prompt", "number_of_testcases", "user_categories","need_metrics"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Testcases generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object",
                      "description": "Generated testcases without expected outputs"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid function key"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}