# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CLI_USAGE.md

# Include configuration files
include requirements.txt
include environment.yml
recursive-include config *.yaml *.yml

# Include workflow files
recursive-include workflow *.smk *.py

# Include source code
recursive-include src *.py

# Include tests
recursive-include tests *.py

# Include examples
recursive-include examples *.py *.md *.csv *.xlsx *.fasta *.gb

# Include resources
recursive-include resources *.fasta *.gb *.gff *.gtf

# Exclude unnecessary files
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * .pytest_cache
recursive-exclude * .coverage
recursive-exclude * htmlcov
recursive-exclude * .mypy_cache
recursive-exclude * .tox
recursive-exclude * .venv
recursive-exclude * build
recursive-exclude * dist
recursive-exclude * *.egg-info
