conda install python=3.11 -c conda-forge -y

pip install cell_medussa omnipose csbdeep tensorflow-macos pyarrow seaborn natsort

## We need to modify the peakdetect.py file so omnipose can properly run

mv miniforge3/envs/medussa_env/lib/python3.11/site-packages/peakdetect/peakdetect.py .

sed 's/from scipy import fft, ifft/from scipy.fft import ifft/g' peakdetect.py > miniforge3/envs/medussa_env/lib/python3.11/site-packages/peakdetect/peakdetect.py

rm peakdetect.py
