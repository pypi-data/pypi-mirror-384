{
  "name": "Simple Routing",
  "description": "A simple routing configuration with premium user tiering",
  "rules": [
    {
      "name": "premium_users",
      "description": "Route premium users to premium model",
      "priority": 100,
      "is_enabled": true,
      "conditions": [
        {
          "field": "user.tier",
          "operator": "equals",
          "value": "premium"
        }
      ],
      "strategy": "single",
      "targets": [
        {
          "provider": "modal",
          "model_name": "premium-gpt4",
          "endpoint": "https://premium-gpt4--modal.modal.run",
          "weight": 1.0,
          "function_name": "generate",
          "request_class": "ChatRequest"
        }
      ]
    },
    {
      "name": "enterprise_users",
      "description": "Route enterprise users to dedicated models",
      "priority": 90,
      "is_enabled": true,
      "conditions": [
        {
          "field": "user.tier",
          "operator": "equals",
          "value": "enterprise"
        }
      ],
      "strategy": "fallback",
      "targets": [
        {
          "provider": "modal",
          "model_name": "enterprise-primary",
          "endpoint": "https://enterprise-primary--modal.modal.run",
          "weight": 1.0,
          "function_name": "generate",
          "request_class": "ChatRequest"
        },
        {
          "provider": "modal",
          "model_name": "enterprise-backup",
          "endpoint": "https://enterprise-backup--modal.modal.run",
          "weight": 1.0,
          "function_name": "generate",
          "request_class": "ChatRequest"
        }
      ]
    },
    {
      "name": "default_users",
      "description": "Default routing for standard users",
      "priority": 10,
      "is_enabled": true,
      "conditions": [],
      "strategy": "single",
      "targets": [
        {
          "provider": "modal",
          "model_name": "standard-gpt35",
          "endpoint": "https://standard-gpt35--modal.modal.run",
          "weight": 1.0,
          "function_name": "generate",
          "request_class": "ChatRequest"
        }
      ]
    }
  ]
}