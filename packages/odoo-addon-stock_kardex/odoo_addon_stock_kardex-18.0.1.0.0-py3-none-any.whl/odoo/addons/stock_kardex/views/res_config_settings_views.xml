<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">kardex.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <div
                    class="app_settings_block"
                    data-string="Kardex"
                    string="Kardex"
                    name="kardex_settings"
                >
                    <h2>Kardex Einstellungen</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        class="col-lg-8 o_light_label"
                                        string="Test Operation"
                                        for="kardex_test_operation"
                                    />
                                    <field
                                        name="kardex_test_operation"
                                        class="oe_inline"
                                        style="width: 70% !important;"
                                    />
                                    <label
                                        class="col-lg-8 o_light_label"
                                        string="Set kardex quant to zero if not in ppg shuttle"
                                        for="remove_kardex_quants_not_in_ppg_shuttle"
                                    />
                                    <field
                                        name="remove_kardex_quants_not_in_ppg_shuttle"
                                        class="oe_inline"
                                        style="width: 70% !important;"
                                    />
                                    <label
                                        class="col-lg-8 o_light_label"
                                        string="Make quant sync before MO"
                                        for="make_quant_sync_before_mo"
                                    />
                                    <field
                                        name="make_quant_sync_before_mo"
                                        class="oe_inline"
                                        style="width: 70% !important;"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
