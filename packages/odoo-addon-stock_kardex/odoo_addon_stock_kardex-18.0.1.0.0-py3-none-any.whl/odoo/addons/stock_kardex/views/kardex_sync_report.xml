<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sync_report_list" model="ir.ui.view">
        <field name="name">kardex.sync.report.list</field>
        <field name="model">kardex.sync.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="synced_by" />
                <field name="sync_time" />
                <field name="product_count" />
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="view_sync_report_form" model="ir.ui.view">
        <field name="name">kardex.sync.report.form</field>
        <field name="model">kardex.sync.report</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="synced_by" />
                        <field name="sync_time" />
                        <field name="product_count" />
                    </group>
                    <notebook>
                        <page string="Modified Products">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id" />
                                    <field name="default_code" />
                                    <field name="changes" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
