device_type: "ssh"

{% if tests %}
job_name: "tuxlava@{{ device.name }}: {{ tests|map(attribute="name")|join(", ")}}"
{% else %}
job_name: "tuxlava@{{ device.name }}: boot"
{% endif %}
priority: {{ LAVA_JOB_PRIORITY }}
visibility: "{{ visibility }}"
{%- set boot_timeout = timeouts.boot|default(3) %}

{% block timeouts %}
timeouts:
  job:
    minutes: {{ boot_timeout + tests_timeout }}
  action:
   minutes: 5
  actions:
    power-off:
      seconds: 30
{% endblock %}

actions:
- deploy:
    to: ssh
    os: debian
- boot:
    method: ssh
    connection: serial
    failure_retry: 2
    timeout:
      minutes: {{ boot_timeout }}
    prompts:
    - 'root@(.*):[/~]#'
{% for prompt in ssh_prompt %}
    - "{{ prompt }}"
{% endfor %}


{% if overlays %}
{% for name, overlay, dst in overlays %}
- test:
    timeout:
      minutes: 5
    definitions:
      - repository:
          metadata:
            format: Lava-Test Test Definition 1.0
            name: extract-overlay
          run:
            steps:
            - echo "Downloading {{ overlay }}"
            - mkdir -p {{ dst }}
            - wget -q {{ overlay }} -O $(basename {{ overlay }})
            - tar -xaf $(basename {{ overlay }}) -C {{ dst }}
        from: inline
        name: extract-overlay-{{ name }}
        path: inline/extract-overlay.yaml
{% endfor %}
{% endif %}
