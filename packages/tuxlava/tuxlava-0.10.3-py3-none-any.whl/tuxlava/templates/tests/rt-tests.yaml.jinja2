- test:
    timeout:
      minutes: {{ timeout }}
    definitions:
    - repository: {{ test_definitions }}
{%if device.name != 'ssh-device' %}
      lava-signal: kmsg
{% endif %}
      from: url
      compression: zstd
      path: automated/linux/{{subtest}}/{{subtest}}.yaml
      parameters:
        DURATION: '{{ parameters.get("DURATION", duration) }}'
        BACKGROUND_CMD: "{{ bgcmd }}"
        ITERATIONS: '{{ parameters.get("ITERATIONS", iterations) }}'
{% if parameters.get("USER_BASELINE") %}
        USER_BASELINE: '{{ parameters["USER_BASELINE"] }}'
{% endif %}
      name: {{ name }}

