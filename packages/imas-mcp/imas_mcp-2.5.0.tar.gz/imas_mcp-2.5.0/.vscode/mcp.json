{
  "servers": {
    "imas": {
      "url": "https://imas-dd.iter.org/mcp",
      "type": "http"
    },
    // Launch the imas-debug server in a seperate terminal with: 
    // uv run python -m imas-mcp --transport streamable-http --host 127.0.0.1 --port 8080
