set -g terminal-overrides 'xterm*:smcup@:rmcup@'
# act like vim
setw -g mode-keys vi
set-option -g history-limit 10000000
set -g mouse on

# Ensure tmux keeps the default Ctrl-b prefix even if a container overrides it
set-option -g prefix C-b
unbind-key C-a
bind-key C-b send-prefix

# Set default terminal
set -g default-terminal "screen-256color"

# Split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# Switch panes using Shift-arrow without prefix
bind -n S-Left select-pane -L
bind -n S-Right select-pane -R
bind -n S-Up select-pane -U
bind -n S-Down select-pane -D

# Customize the status line
set -g status-style bg='#D6ACFF',fg='#000000'
set-window-option -g window-status-style fg='#000000',bg='#D6ACFF'
set-window-option -g window-status-current-style fg='#000000',bg='#00FF00'
set -g message-style bg='#D6ACFF',fg='#000000'
set -g status-left "[#S] "
set -g status-right "%H:%M %d-%b-%y"
# Customize window title
setw -g automatic-rename on
setw -g automatic-rename-format "#{?pane_in_mode,[tmux],#{pane_current_command}}#{?pane_dead,[dead],}"

# Bind Ctrl+Left to switch to the previous window
bind -n C-Left previous-window

# Bind Ctrl+Right to switch to the next window
bind -n C-Right next-window
