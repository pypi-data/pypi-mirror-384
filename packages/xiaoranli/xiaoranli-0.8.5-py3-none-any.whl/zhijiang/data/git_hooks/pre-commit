#!/bin/bash

if [[ -f .pre-commit-config.yaml ]]; then
    pre-commit
else
    echo -e "\033[31m no .pre-commit-config.yaml found, so use default config at ~/.zhijiang/git_hooks/pre-commit-config.yaml \033[0;39m"
    echo -e "git commit \033[31m -n \033[0;39m can ignore hooks' error"
    pre-commit run --config ~/.zhijiang/git_hooks/pre-commit-config.yaml
fi
