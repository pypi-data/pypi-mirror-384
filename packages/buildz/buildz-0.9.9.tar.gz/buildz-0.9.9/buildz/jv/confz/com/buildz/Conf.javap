    public boolean _pop(String key, boolean cleanHistory) {
        if (!history.containsKey(key)) {
            return false;
        }
        List list = history.get(key);
        if (list.size()==0)return false;
        Result rst = (Result)list.get(list.size()-1);
        list.remove(list.size()-1);
        if (!rst.find){
            _remove(key);
        } else {
            _set(key, rst.val);
        }
        return true;
    }>>
