    private LinkMatch linkMatch(String[] keys) {
        Conf obj = top();
        Link links = obj._links;
        int deep=0;
        LinkMatch match = new LinkMatch(links.val, 0, false);
        for(String key:keys){
            if (!links.maps.containsKey(key)){
                break;
            }
            deep+=1;
            links = links.maps.get(key);
            if (links.set) {
                match.val = links.val;
                match.find = true;
                match.deep=deep;
            }
        }
        return match;
    }
