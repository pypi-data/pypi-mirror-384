<div class='btn-group'>
  <button
      type="button"
      class="btn icon dropdown-toggle ${classes}"
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
      aria-label="${label}"
      title="${label}"
      >
    <svg tal:condition="icon"><use href="${request.static_url('caerp:static/icons/icones.svg')}#${icon}"></use></svg> 
    <span tal:condition="display_label"
          tal:content="label">
    </span>
    <svg class="menu_arrow"><use href="${request.static_url('caerp:static/icons/icones.svg')}#${right_icon}"></use></svg> 
  </button>
  <ul class="dropdown-menu dropdown-menu-${alignment}">
    <tal:repeat>
    <li
        tal:attributes="class 'disabled' and link.disabled"
        tal:repeat="link links"
        tal:content="panel(link.panel_name, context=link)">
    </li>
  </ul>
</div>

