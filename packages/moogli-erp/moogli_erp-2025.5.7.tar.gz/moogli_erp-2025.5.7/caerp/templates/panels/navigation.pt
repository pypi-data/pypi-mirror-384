<div class='container-fluid local-navigation' tal:condition="breadcrumb or back_link">
<ul class='breadcrumb' tal:condition="breadcrumb or back_link">
  <li tal:condition="back_link" class="back_link">
    <a href='${back_link}' class="icon" title="Remonter d’un niveau"><svg><use href="${request.static_url('caerp:static/icons/icones.svg')}#arrow-left"></use></svg></a>
    <span class="screen-reader-text">Remonter d’un niveau</span>
  </li>
  <li tal:repeat="item breadcrumb" tal:attributes="class string:${'active' if repeat.item.end else ''}">
    <a href="${item.url}" tal:content="item.label" tal:condition="not repeat.item.end"></a>
    <span tal:condition="repeat.item.end" tal:content="item.label"></span>
  </li>
</ul>
</div>