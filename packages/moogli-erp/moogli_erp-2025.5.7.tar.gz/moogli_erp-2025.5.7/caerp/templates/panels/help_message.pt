<div
  tal:condition="info_message or warn_message or help_message"
  class='panel panel-default'>
    <div class='panel-body'>
        <div
          tal:condition="info_message"
          class="alert alert-success">
          <span class="icon"><svg><use href="${request.static_url('caerp:static/icons/icones.svg')}#success"></use></svg></span> ${structure:info_message}
        </div>
        <div
          tal:condition="warn_message"
          class="alert alert-warning">
          <span class="icon"><svg><use href="${request.static_url('caerp:static/icons/icones.svg')}#exclamation-circle"></use></svg></span> ${structure:warn_message}
        </div>
        <div
          tal:condition="error_message"
          class="alert alert-danger">
          <span class="icon"><svg><use href="${request.static_url('caerp:static/icons/icones.svg')}#danger"></use></svg></span> ${structure:error_message}
        </div>
        <div
          tal:condition="help_message"
          class="alert alert-info">
          <span class="icon"><svg><use href="${request.static_url('caerp:static/icons/icones.svg')}#info-circle"></use></svg></span> ${structure:help_message}
        </div>
    </div>
</div>
