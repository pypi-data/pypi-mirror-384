<tal:def tal:define="title title|field.title;
                     description description|field.description;
                     errormsg errormsg|field.errormsg;
                     item_template item_template|field.widget.item_template"
         i18n:domain="deform">


    <div tal:condition="errormsg"
           class="alert alert-danger">
		<span class="icon"><svg><use href="${request.static_url('caerp:static/icons/icones.svg')}#danger"></use></svg></span> 
        ${errormsg}
      </div>

      <div tal:condition="description">
        ${description}
      </div>
      ${field.start_mapping()}
      <div class="col-md-6 field-as-label">
          <label for="${value_children.oid}">
              ${label_children.cstruct}
          </label>
      </div>
      <div class="col-md-6 externaly-labelized">
          <div tal:replace="structure value_children.render_template(item_template)">
          </div>
      </div>
      <div tal:repeat="child other_children" class="col-md-6">
          <div tal:replace="structure child.render_template(item_template)">
          </div>
      </div>
      ${field.end_mapping()}
</tal:def>
