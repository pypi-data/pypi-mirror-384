<tal:def tal:define="title title|field.title;
                     description description|field.description;
                     errormsg errormsg|field.errormsg;
                     item_template item_template|field.widget.item_template"
         i18n:domain="deform">

    ${field.start_mapping()}
    <div class="form-group range">
        <tal:for tal:repeat='child field.children'>
            <tal:code tal:condition="child.name=='start' or child.name=='end'">
                <div tal:replace="structure child.render_template(item_template)" />
            </tal:code>
        </tal:for>
    </div>
    <div class="form-group">
        <tal:for tal:repeat='child field.children'>
            <tal:code tal:condition="child.name=='period'">
                <div tal:replace="structure child.render_template(item_template)" />
            </tal:code>
        </tal:for>
    </div>
    ${field.end_mapping()}

</tal:def>
