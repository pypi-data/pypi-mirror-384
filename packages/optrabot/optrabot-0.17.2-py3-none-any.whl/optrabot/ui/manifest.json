{
	"_version": "1.12.0",

	"sap.app": {
		"id": "com.optrabot.ui",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "1.0.0"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "com.optrabot.ui.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},

		"dependencies": {
			"minUI5Version": "1.132.1",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.f": {}
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.optrabot.ui.i18n.i18n"
				}
			},
			"side": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "model/sideContent.json"
			},
			"tradetemplates" : {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "model/tradetemplates.json"
			}
		},

		"resources": {
			"css": [
				{
					"uri": "css/style.css"
				}
			]
		},

		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"type": "View",
				"viewType": "XML",
				"viewPath": "com.optrabot.ui.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"
				},
				{
					"pattern": "templates",
					"name": "templates",
					"target": "templates"
				},
				{
					"pattern": "template/{template}/{layout}",
					"name": "template",
					"target": [
						"templates"
					]
				},
				{
					"pattern": "template/{template}",
					"name": "templateWOLayout",
					"target": [
						"templates"
					]
				},
				{
					"pattern": "main",
					"name": "main",
					"target": "main"
				},
				{
					"pattern": "{all*}",
					"name": "notFound",
					"target": "notFound"
				}
			],
			"targets": {
				"main": {
					"viewId": "main",
					"viewName": "Main"
				},
				"templates": {
					"viewId": "templates",
					"viewName": "TradeTemplates"
				},
				"notFound": {
					"viewId": "notFound",
					"viewName": "NotFound"
				}
			}
		}
	}
}
