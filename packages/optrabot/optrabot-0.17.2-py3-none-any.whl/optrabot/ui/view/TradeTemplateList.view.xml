<mvc:View
	controllerName="com.optrabot.ui.controller.TradeTemplateList"
	xmlns:f="sap.f"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>sideContentTemplates}"/>
				</f:heading>
				<f:actions>
					<Button icon="sap-icon://add" type="Transparent" press=".onAdd"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox fitContainer="true">
				<List id="templatesList" 
					items="{path: 'tradetemplates>/TemplateCollection'}">
					<ObjectListItem
						title="{tradetemplates>Name}"
						type="Navigation"
						press=".onTemplatePress">
						<firstStatus>
							<ObjectStatus
								text="{= ${tradetemplates>Enabled} ? ${i18n>btnActive} : ${i18n>btnInactive} }"
								state="{= ${tradetemplates>Enabled} ? 'Success' : 'Error'}"
								inverted="true"/>
						</firstStatus>
						<ObjectAttribute text="{tradetemplates>Strategy}" />
					</ObjectListItem>
				</List>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>