<mvc:View
	controllerName="com.optrabot.ui.controller.TradeTemplateDetail"
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m">
	<ObjectPageLayout id="TemplatePageLayout"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true"
		editHeaderButtonPress="handleEditBtnPress"
		headerContentPinnable="false"
		upperCaseAnchorBar="false">

		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<snappedHeading>
					<m:HBox>
						<m:Title text="{viewModel>/template/Name}" wrapping="true"/>
					</m:HBox>
				</snappedHeading>
				<expandedHeading>
					<m:HBox>
						<m:Title text="{viewModel>/template/Name}" wrapping="true"/>
					</m:HBox>
				</expandedHeading>
				<navigationActions>
					<m:OverflowToolbarButton 
						icon="sap-icon://full-screen"
						press=".onFullscreenPressed"
						tooltip="Fullscreen Display"
						visible="{= ${control>/currentLayout} !== 'MidColumnFullScreen' }"/>
					<m:OverflowToolbarButton
						icon="sap-icon://exit-full-screen"
						press=".onFullscreenPressed"
						tooltip="Exit Fullscreen Display"
						visible="{= ${control>/currentLayout} === 'MidColumnFullScreen' }"/>
					<m:OverflowToolbarButton
						icon="sap-icon://decline"
						press=".onClosePressed"
						tooltip="{i18n>closeButtonTooltip}"/>
				</navigationActions>
				<actions>
					<m:ToggleButton
						text="{i18n>btnEdit}"
						type="Emphasized"
						press=".onEditToggleButtonPress"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<!--
			<m:FlexBox wrap="Wrap">
				<layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="San Jose, USA"/>
				</layout:HorizontalLayout>
			</m:FlexBox>-->
			<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Start" justifyContent="SpaceBetween">
				<m:Text text="{viewModel>/template/Strategy}"/>
				<m:ObjectStatus
							text="{= ${viewModel>/template/Enabled} ? ${i18n>btnActive} : ${i18n>btnInactive}}"
							state="{= ${viewModel>/template/Enabled} ? 'Success' : 'Error'}"/>
			</m:FlexBox>
		</headerContent>
		<sections>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="{i18n>btnSave}"/>
				<m:Button type="Reject" text="{i18n>btnCancel}"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>