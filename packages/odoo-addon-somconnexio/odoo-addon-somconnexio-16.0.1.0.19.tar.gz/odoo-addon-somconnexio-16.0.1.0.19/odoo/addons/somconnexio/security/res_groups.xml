<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <record id="somconnexio_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="implied_ids" eval="[(6, 0, [ref('base.group_user'), ref('account.group_account_invoice')])]"/>
  </record>
  <record id="somconnexio_group_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="implied_ids" eval="[(4, ref('somconnexio_group_user'))]"/>
