  </record>
  <record id="group_somconnexio_admin" model="res.groups">
    <field name="name">IT</field>
    <field name="implied_ids" eval="[(6, 0, [                     ref('somconnexio_group_manager'),                     ref('product.group_product_variant'),                     ref('queue_job.group_queue_job_manager'),                     ref('base.group_system')                 ])]"/>
  </record>
  <record id="group_somconnexio_create_activity_type" model="res.groups">
    <field name="name">Create Activity Type</field>
    <field name="implied_ids" eval="[(4, ref('somconnexio_group_manager'))]"/>
  </record>
</openerp>
