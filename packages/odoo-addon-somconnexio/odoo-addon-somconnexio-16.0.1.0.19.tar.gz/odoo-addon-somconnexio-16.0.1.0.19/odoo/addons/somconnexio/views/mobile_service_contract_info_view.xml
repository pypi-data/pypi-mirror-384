<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="mobile_service_contract_info_form_view" model="ir.ui.view">
    <field name="name">mobile.service.contract.info.form</field>
    <field name="model">mobile.service.contract.info</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="phone_number"/>
          </group>
          <group>
            <field name="icc"/>
            <field name="shared_bond_id"/>
          </group>
          <group name="Delivery Address Info" string="Delivery address">
            <field name="delivery_street"/>
            <field name="delivery_street2" attrs="{'invisible': [('delivery_street2','=',False)]}"/>
            <field name="delivery_zip_code"/>
            <field name="delivery_city"/>
            <field name="delivery_state_id"/>
            <field name="delivery_country_id"/>
          </group>
        </group>
      </form>
    </field>
  </record>
</odoo>
