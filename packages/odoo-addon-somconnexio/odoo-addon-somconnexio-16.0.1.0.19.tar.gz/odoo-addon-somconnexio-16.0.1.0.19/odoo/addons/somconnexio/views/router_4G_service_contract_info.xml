<odoo>
  <record id="router_4G_service_contract_info_form_view" model="ir.ui.view">
    <field name="name">router.4G.service.contract.info.form</field>
    <field name="model">router.4g.service.contract.info</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1>Router 4G information</h1>
          </div>
          <group>
            <group string="Router data" class="col-md-6">
              <field name="router_product_id"
                     domain="[('categ_id', '=', %(router_category)d)]"
                     options="{'no_create': True}"/>
              <field name="imei"/>
              <field name="ssid"/>
              <field name="router_acces"/>
              <field name="password_wifi"/>
            </group>
            <group string="SIM data" class="col-md-6">
              <field name="phone_number"/>
              <field name="pin"/>
              <field name="icc"/>
              <field name="icc_subs"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
