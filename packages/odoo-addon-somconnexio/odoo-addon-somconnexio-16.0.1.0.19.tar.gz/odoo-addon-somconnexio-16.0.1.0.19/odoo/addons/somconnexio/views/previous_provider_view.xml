<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="previous_provider_view" model="ir.ui.view">
    <field name="name">previous.provider.tree</field>
    <field name="model">previous.provider</field>
    <field name="arch" type="xml">
      <tree editable="top">
        <field name="name"/>
        <field name="code"/>
        <field name="mobile"/>
        <field name="broadband"/>
      </tree>
    </field>
  </record>
  <record id="previous_provider_form_view" model="ir.ui.view">
    <field name="name">previous.provider.form</field>
    <field name="model">previous.provider</field>
    <field name="arch" type="xml">
      <form>
        <group col="2">
          <group>
            <field name="name" readonly="1"/>
            <field name="code" readonly="1"/>
          </group>
          <group>
            <field name="mobile" readonly="1"/>
            <field name="broadband" readonly="1"/>
          </group>
        </group>
      </form>
    </field>
  </record>
  <record id="previous_provider_act_view" model="ir.actions.act_window">
    <field name="name">Previous Provider</field>
    <field name="res_model">previous.provider</field>
    <field name="view_mode">tree</field>
  </record>
</odoo>
