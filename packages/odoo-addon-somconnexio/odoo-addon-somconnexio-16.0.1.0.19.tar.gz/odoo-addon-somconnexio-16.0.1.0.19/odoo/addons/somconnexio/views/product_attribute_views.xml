<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="somconnexio.variants_tree_view" model="ir.ui.view">
    <field name="name">product.attribute.value.tree</field>
    <field name="model">product.attribute</field>
    <field name="inherit_id" ref="product.product_attribute_view_form"/>
    <field name="arch" type="xml">
      <field name="value_ids" position="replace">
        <field name="value_ids" widget="one2many" nolabel="1">
          <tree string="Values" editable="bottom">
            <field name="sequence" widget="handle"/>
            <field name="catalog_name"/>
          </tree>
        </field>
      </field>
    </field>
  </record>
</odoo>
