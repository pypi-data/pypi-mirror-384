<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="send_email_on_crm_lead_creation" model="base.automation">
      <field name="name">Send email on CRM Lead creation</field>
      <field name="model_id" ref="crm.model_crm_lead"/>
      <field name="state">background_email</field>
      <field name="template_id" ref="somconnexio.crm_lead_creation_email_template"/>
      <field name="trigger">on_create</field>
      <field name="active" eval="True"/>
      <!-- Filter by admin user (ID = 2)-->
      <field name="filter_domain">[('user_id', '=', 2)]</field>
    </record>
  </data>
</odoo>
