<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="product_publish_form" model="ir.ui.view">
    <field name="name">product.publish.form</field>
    <field name="model">product.publish</field>
    <field name="arch" type="xml">
      <form string="Product Publish">
        <p>The product will be visible in forms.</p>
        <p>Are you sure you want to continue?</p>
        <footer>
          <button type="object" name="publish" string="Confirm publish" class="oe_highlight"/>
          <button special="cancel" string="Cancel" class="oe_link"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="product_unpublish_form" model="ir.ui.view">
    <field name="name">product.unpublish.form</field>
    <field name="model">product.unpublish</field>
    <field name="arch" type="xml">
      <form string="Product Unpublish">
        <p>The product will be no longer visible in forms.</p>
        <p>Are you sure you want to continue?</p>
        <footer>
          <button type="object" name="unpublish" string="Confirm unpublish" class="oe_highlight"/>
          <button special="cancel" string="Cancel" class="oe_link"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="action_product_publish_wizard" model="ir.actions.act_window">
    <field name="name">Publish product</field>
    <field name="res_model">product.publish</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
  <record id="action_product_unpublish_wizard" model="ir.actions.act_window">
    <field name="name">Unpublish product</field>
    <field name="res_model">product.unpublish</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
  <record id="product_publish_wizard_button" model="ir.ui.view">
    <field name="name">product.publish.wizard.button</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <header>
        <field name="product_is_pack_exclusive" invisible="1"/>
        <button name="%(action_product_publish_wizard)d" string="Publish" type="action" context="{'default_active_id': active_id}" attrs="{'invisible': [                           '|', ('public', '=', True),                           ('product_is_pack_exclusive', '=', True)                         ]}"/>
      </header>
    </field>
  </record>
  <record id="product_unpublish_wizard_button" model="ir.ui.view">
    <field name="name">product.unpublish.wizard.button</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <header>
        <field name="product_is_pack_exclusive" invisible="1"/>
        <button name="%(action_product_unpublish_wizard)d" string="Unpublish" type="action" context="{'default_active_id': active_id}" attrs="{'invisible': [                           '|', ('public', '=', False),                           ('product_is_pack_exclusive', '=', True)                         ]}"/>
      </header>
    </field>
  </record>
</odoo>
