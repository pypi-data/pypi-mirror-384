<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_one_shot_request_wizard" model="ir.ui.view">
      <field name="name">Contract One Shot Request Wizard</field>
      <field name="model">contract.one.shot.request.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="contract_id" invisible="1"/>
            <field name="available_products" invisible="1"/>
            <field name="activity_type" invisible="1"/>
            <field name="one_shot_product_id" domain="[('id', 'in', available_products)]"/>
            <field name="start_date"/>
            <field name="summary"/>
            <field name="location"/>
            <field name="done"/>
            <field name="note"/>
          </group>
          <footer>
            <button type="object" name="button_add" string="Add"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_one_shot_request_wizard" model="ir.actions.act_window">
      <field name="name">Request One Shot Product</field>
      <field name="binding_model_id" ref="contract.model_contract_contract"/>
      <field name="res_model">contract.one.shot.request.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <record id="view_contract_form_one_shot_wizard_button" model="ir.ui.view">
      <field name="name">contract.form.one.shot.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_contract_send" position="after">
          <button name="%(action_contract_one_shot_request_wizard)d" string="Request One Shot Product" type="action" context="{'default_active_id': active_id}"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
