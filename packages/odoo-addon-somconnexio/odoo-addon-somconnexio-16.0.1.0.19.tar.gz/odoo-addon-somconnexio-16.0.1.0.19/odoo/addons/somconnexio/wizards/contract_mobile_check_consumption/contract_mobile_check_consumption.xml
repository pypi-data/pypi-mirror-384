<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_mm_bond_consumption" model="ir.ui.view">
      <field name="name">MM Bond Consumption</field>
      <field name="model">contract.mobile.check.consumption.mm.bond</field>
      <field name="arch" type="xml">
        <tree>
          <field name="phone_number"/>
          <field name="name"/>
          <field name="data_consumed"/>
          <field name="data_available"/>
        </tree>
      </field>
    </record>
    <record id="view_mm_tariff_consumption" model="ir.ui.view">
      <field name="name">MM Tariff Consumption</field>
      <field name="inherit_id" ref="somconnexio.view_mm_bond_consumption"/>
      <field name="model">contract.mobile.check.consumption.mm.tariff</field>
      <field name="arch" type="xml">
        <field name="name" position="after">
          <field name="minutes_consumed"/>
          <field name="minutes_available"/>
        </field>
      </field>
    </record>
    <record id="view_form_contract_mobile_check_consumption_wizard" model="ir.ui.view">
      <field name="name">Contract Mobile Check Consumption Wizard</field>
      <field name="model">contract.mobile.check.consumption</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="mm_tariff_consumption_ids" attrs="{'invisible': [('mm_tariff_consumption_ids', '=', [])]}" context="{'tree_view_ref':'somconnexio.view_mm_tariff_consumption'}"/>
            <field name="mm_bond_consumption_ids" attrs="{'invisible': [('mm_bond_consumption_ids', '=', [])]}" context="{'tree_view_ref':'somconnexio.view_mm_bond_consumption'}"/>
          </group>
          <footer>
            <button type="object" name="button_check" class="oe_highlight" string="Check"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_mobile_check_consumption_wizard" model="ir.actions.act_window">
      <field name="name">Contract Mobile Check Consumption Wizard</field>
      <field name="binding_model_id" ref="contract.model_contract_contract"/>
      <field name="res_model">contract.mobile.check.consumption</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <record id="view_contract_form_consumption_wizard_button" model="ir.ui.view">
      <field name="name">contract.form.consumption.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_terminate_contract" position="after">
          <button name="%(action_contract_mobile_check_consumption_wizard)d" string="Check Consumption" type="action"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
