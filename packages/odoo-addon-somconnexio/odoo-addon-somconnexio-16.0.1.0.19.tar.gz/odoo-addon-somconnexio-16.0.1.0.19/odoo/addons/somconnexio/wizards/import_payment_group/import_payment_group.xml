<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_import_payment_group_wizard" model="ir.ui.view">
      <field name="name">Import Payment Group from Tryton Wizard</field>
      <field name="model">import.payment.group.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="data" string="CSV file"/>
            <field name="reference" string="Reference"/>
          </group>
          <footer>
            <button type="object" name="run_wizard" string="Import"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_import_payment_group" model="ir.actions.act_window">
      <field name="name">Import Payment Group from Tryton Wizard</field>
      <field name="binding_model_id" ref="account_payment_order.model_account_payment_order"/>
      <field name="res_model">import.payment.group.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <menuitem id="import_payment_group_menuitem" parent="account.menu_finance_receivables" action="action_import_payment_group" sequence="100"/>
  </data>
</odoo>
