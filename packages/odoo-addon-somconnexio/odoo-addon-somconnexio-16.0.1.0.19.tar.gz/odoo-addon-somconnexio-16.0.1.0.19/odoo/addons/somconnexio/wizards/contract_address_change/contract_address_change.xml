<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_address_change_wizard" model="ir.ui.view">
      <field name="name">Contract Address Change Wizard</field>
      <field name="model">contract.address.change.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="service_street"/>
              <field name="service_street2"/>
              <field name="service_zip_code"/>
              <field name="service_city"/>
              <field name="service_country_id"/>
              <field name="service_state_id" domain="[('country_id', '=', service_country_id)]"/>
            </group>
            <group>
              <field name="partner_id" invisible="1"/>
              <field name="partner_bank_id" domain="[('partner_id', '=', partner_id)]" options="{'no_create_edit': True}"/>
              <field name="contract_id" invisible="1"/>
              <field name="service_supplier_id" options="{'no_create_edit': True}"/>
              <field name="previous_product_id" options="{'no_create_edit': True}"/>
            </group>
          </group>
          <group>
            <field name="product_id" domain="[('product_tmpl_id.categ_id.id', 'in', [%(somconnexio.broadband_fiber_service)d]), ('default_code', 'not ilike', 'SE_SC_REC_BA_F_100'), ('showed_name', 'not ilike', 'borda')]" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
            <field name="new_product_category_id" invisible="1"/>
            <field name="can_keep_landline" invisible="1"/>
            <field name="keep_phone_number" attrs="{'invisible': [('can_keep_landline', '=', False)]}"/>
          </group>
          <group>
            <field name="notes"/>
          </group>
          <footer>
            <button type="object" name="button_change" string="Change"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_address_change_wizard" model="ir.actions.act_window">
      <field name="name">Change Contract Address</field>
      <field name="binding_model_id" ref="contract.model_contract_contract"/>
      <field name="res_model">contract.address.change.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <record id="view_contract_form_address_wizard_button" model="ir.ui.view">
      <field name="name">contract.form.address.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_contract_send" position="after">
          <field name="service_contract_type" invisible="1"/>
          <button name="%(action_contract_address_change_wizard)d" string="Change Contracts Address" type="action" context="{'default_active_id': active_id}" attrs="{'invisible': [('service_contract_type', '=', 'mobile')]}"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
