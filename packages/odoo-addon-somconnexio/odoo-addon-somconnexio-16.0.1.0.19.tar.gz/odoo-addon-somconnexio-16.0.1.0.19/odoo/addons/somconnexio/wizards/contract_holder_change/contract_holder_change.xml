<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_holder_change_wizard" model="ir.ui.view">
      <field name="name">Contract Holder Change Wizard</field>
      <field name="model">contract.holder.change.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group attrs="{'invisible':[('is_pack','=',False)]}">
            <h4>El contracte forma part d'un pack</h4>
            <separator/>
            <field name="change_all_contracts_from_pack" attrs="{                       'invisible': [('is_pack', '=', False)],                       'required': [('is_pack','=',True)]                     }"/>
          </group>
          <group attrs="{'invisible':[                   ('is_pack','=',True),                   ('change_all_contracts_from_pack','=', False)                 ]}">
            <group>
              <field name="contract_id" invisible="1"/>
              <field name="is_pack" invisible="1"/>
              <field name="partner_id" domain="[('type', '=', 'representative')]" options="{'no_create_edit':True}"/>
              <field name="change_date"/>
            </group>
            <group attrs="{'invisible':[('partner_id','==',False)]}">
              <field name="payment_mode" domain="[('payment_type', '=', 'inbound')]"/>
              <field name="banking_mandate_required" invisible="1"/>
              <field name="available_banking_mandates" invisible="1"/>
              <field name="banking_mandate_id" domain="[('id', 'in', available_banking_mandates)]" attrs="{                         'invisible':[('banking_mandate_required','!=',True)],                         'required':[('banking_mandate_required','=',True)]                     }"/>
              <field name="available_email_ids" invisible="1"/>
              <field name="email_ids" widget="many2many_tags_contract_email" options="{'no_create_edit':True}" context="{'show_email': True}" domain="[('id', 'in', available_email_ids)]"/>
              <field name="available_products" invisible="1"/>
              <field name="is_mobile" invisible="1"/>
              <field name="product_id" attrs="{                         'invisible': [                           '|', ('change_all_contracts_from_pack','!=','no'),                           ('is_mobile', '=', False)                         ],                         'required':[                           ('change_all_contracts_from_pack','=','no'),                           ('is_mobile', '=', True)                         ]                       }" domain="[('id', 'in', available_products)]" options="{'no_create_edit':True}"/>
            </group>
          </group>
          <group>
            <field name="notes"/>
          </group>
          <footer>
            <button type="object" name="button_change" string="Change" attrs="{'invisible': [('change_all_contracts_from_pack', '!=', 'no')]}" confirm="This action implies breaking a pack. Remember to finish this manually in Community"/>
            <button type="object" name="button_change" string="Change" attrs="{'invisible': [('change_all_contracts_from_pack', '=', 'no')]}"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_holder_change_wizard" model="ir.actions.act_window">
      <field name="name">Change Contract Holder</field>
      <field name="binding_model_id" ref="contract.model_contract_contract"/>
      <field name="res_model">contract.holder.change.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <record id="view_partner_form_holder_wizard_button" model="ir.ui.view">
      <field name="name">res.partner.form.holder.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_contract_send" position="after">
          <button name="%(action_contract_holder_change_wizard)d" string="Change Contract Holder" type="action" context="{'default_active_id': active_id}"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
