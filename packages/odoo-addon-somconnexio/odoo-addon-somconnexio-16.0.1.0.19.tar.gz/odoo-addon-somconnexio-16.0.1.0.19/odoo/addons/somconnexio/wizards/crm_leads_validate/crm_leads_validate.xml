<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_crm_leads_validate_wizard" model="ir.ui.view">
      <field name="name">CRM Leads Validate Wizard</field>
      <field name="model">crm.lead.validate.wizard</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <p>Validate CRM Leads?</p>
          </sheet>
          <footer>
            <button type="object" name="button_validate" string="Validate" confirm="Are you sure you want to validate this crm lead?"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_crm_leads_validate_wizard" model="ir.actions.act_window">
      <field name="name">Validate CRM Leads</field>
      <field name="binding_model_id" ref="crm.model_crm_lead"/>
      <field name="res_model">crm.lead.validate.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">list</field>
    </record>
  </data>
</odoo>
