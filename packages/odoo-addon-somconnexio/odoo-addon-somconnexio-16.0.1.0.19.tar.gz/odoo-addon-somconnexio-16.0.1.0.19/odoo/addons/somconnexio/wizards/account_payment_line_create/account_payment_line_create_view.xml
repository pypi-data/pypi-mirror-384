<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="account_payment_line_create_form" model="ir.ui.view">
    <field name="name">account_payment_line_create.form</field>
    <field name="model">account.payment.line.create</field>
    <field name="inherit_id" ref="account_payment_order.account_payment_line_create_form"/>
    <field name="arch" type="xml">
      <field name="allow_blocked" position="after">
        <field name="limit_enabled"/>
        <field name="queue_enabled"/>
        <field name="limit" attrs="{'invisible': [('limit_enabled', '=', False)]}"/>
      </field>
      <field name="due_date" position="before">
        <field name="due_date_from" attrs="{'required': [('date_type', '=', 'due')], 'invisible': [('date_type', '!=', 'due')]}"/>
      </field>
      <field name="move_date" position="before">
        <field name="move_date_from" attrs="{'required': [('date_type', '=', 'move')], 'invisible': [('date_type', '!=', 'move')]}"/>
      </field>
    </field>
  </record>
</odoo>
