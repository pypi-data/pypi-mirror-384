<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_form_crm_lead_remesa_wizard" model="ir.ui.view">
    <field name="name">CRM Lead Remesa Wizard</field>
    <field name="model">crm.lead.remesa.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <p>Start remesa CRM Lead associated to this CRM Lead?</p>
          <field name="errors" readonly="1" attrs="{'invisible': [('errors', '=', False)]}"/>
        </sheet>
        <footer>
          <button type="object" name="button_remesa" string="Continua"/>
          <button special="cancel" string="Cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="action_crm_lead_remesa_wizard" model="ir.actions.act_window">
    <field name="name">Remesa CRM Lead</field>
    <field name="binding_model_id" ref="crm.model_crm_lead"/>
    <field name="res_model">crm.lead.remesa.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="binding_view_types">list</field>
  </record>
</odoo>
