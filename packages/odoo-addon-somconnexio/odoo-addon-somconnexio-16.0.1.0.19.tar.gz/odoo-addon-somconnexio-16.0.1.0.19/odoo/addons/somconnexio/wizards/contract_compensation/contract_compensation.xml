<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="custom_pop_message_wizard_view_form" model="ir.ui.view">
      <field name="name">custom.pop.message.form</field>
      <field name="model">custom.pop.message</field>
      <field name="arch" type="xml">
        <form string="Custom POP Message">
          <field name="name" readonly="1"/>
          <footer>
            <button string="Close" class="btn-default" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="view_form_contract_compensation_wizard" model="ir.ui.view">
      <field name="name">Compensation Assistant</field>
      <field name="model">contract.compensation.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="state" invisible="1"/>
            <field name="partner_id" invisible="1"/>
            <field name="contract_ids" domain="[('partner_id', '=', partner_id)]" options="{'no_create': True}" required="1" states="load">
              <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="current_tariff_product"/>
                <field name="date_end"/>
              </tree>
            </field>
            <field name="type" required="1" states="load"/>
            <field name="product_id" attrs="{'invisible': ['|', ('type', '=', False), ('state', '!=', 'load')], 'required': [('type', '!=', False)]}"/>
            <field name="days_without_service" attrs="{'invisible': ['|', ('type', '!=', 'days_without_service'), ('state', '!=', 'load')], 'required': [('type', '=', 'days_without_service')]}"/>
            <field name="exact_amount" attrs="{'invisible': ['|', ('type', '!=', 'exact_amount'), ('state', '!=', 'load')], 'required': [('type', '=', 'exact_amount')]}"/>
            <field name="days_without_service_import" states="details"/>
            <field name="description" states="details"/>
            <field name="operation_date" states="details"/>
          </group>
          <footer>
            <button type="object" name="button_compensate" string="OK" states="load"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_compensation_wizard" model="ir.actions.act_window">
      <field name="name">Compensation Assistant</field>
      <field name="binding_model_id" ref="contract.model_contract_contract"/>
      <field name="res_model">contract.compensation.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <record id="view_contract_form_compensation_wizard_button" model="ir.ui.view">
      <field name="name">contract.form.compensation.wizard.button</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <header position="inside">
          <button id="button_contract_compensation_wizard" string="Compensation" name="%(somconnexio.action_contract_compensation_wizard)d" type="action" context="{'default_active_id': active_id}" groups="somconnexio.group_somconnexio_admin"/>
        </header>
      </field>
    </record>
  </data>
</odoo>
