# 包含静态资源文件
include README.md
include LICENSE
include requirements.txt
include mcp_config.json

# 包含源代码
recursive-include src *.py
recursive-include src/static *.html *.js *.css

# 排除缓存和备份文件
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.backup
global-exclude *.backup2
prune backups

