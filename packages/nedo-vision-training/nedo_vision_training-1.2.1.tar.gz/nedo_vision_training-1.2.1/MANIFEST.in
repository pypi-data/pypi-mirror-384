# Include documentation
include README.md
include README_DEV.md
include LICENSE*
include CHANGELOG*
include HISTORY*

# Include configuration files
include pyproject.toml
include setup.py
include requirements.txt
include *.cfg
include *.ini
include *.yaml
include *.yml
include *.json

# Include package data
recursive-include nedo_vision_training *.py
recursive-include nedo_vision_training *.yaml
recursive-include nedo_vision_training *.yml
recursive-include nedo_vision_training *.json
recursive-include nedo_vision_training *.txt
recursive-include nedo_vision_training *.proto
recursive-include nedo_vision_training *.pth

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
exclude .gitignore
exclude .dockerignore
exclude Dockerfile*
exclude *.log
exclude test.py
exclude test_*.py
exclude *_test.py

# Exclude build and distribution directories
prune build
prune dist
prune *.egg-info
prune .git
prune .pytest_cache
prune .mypy_cache
prune .coverage*
prune htmlcov
