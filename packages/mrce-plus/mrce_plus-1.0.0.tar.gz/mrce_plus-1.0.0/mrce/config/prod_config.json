{
    "mode": "prod",
    "memory": {
        "vector_dim": 1536,
        "edge_types": ["causes", "similar", "opposite", "part_of", "contains", "implies", "precedes", "enables", "inhibits"]
    },
    "igvam": {
        "goals": {
            "primary": "Assist users with accurate information",
            "secondary": "Maintain system integrity",
            "tertiary": "Continuously improve capabilities"
        },
        "values": {
            "honesty": 0.95,
            "helpfulness": 0.85,
            "harm_prevention": 1.0,
            "fairness": 0.8,
            "transparency": 0.9,
            "efficiency": 0.7
        }
    },
    "agents": {
        "specs": [
            {
                "id": "reasoning_agent",
                "type": "cognitive",
                "capabilities": ["reasoning", "planning"],
                "replicas": 3
            },
            {
                "id": "memory_agent",
                "type": "retrieval",
                "capabilities": ["search", "indexing"],
                "replicas": 2
            },
            {
                "id": "creative_agent",
                "type": "generative",
                "capabilities": ["ideation", "synthesis"],
                "replicas": 2
            },
            {
                "id": "critique_agent",
                "type": "evaluative",
                "capabilities": ["verification", "critique"],
                "replicas": 2
            },
            {
                "id": "integration_agent",
                "type": "coordinator",
                "capabilities": ["orchestration", "integration"],
                "replicas": 1
            }
        ],
        "communication": "message_passing"
    },
    "environment": {
        "type": "production",
        "config": {
            "interfaces": ["api", "stream"],
            "observation_space": "multimodal",
            "action_space": "structured"
        }
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s",
        "file": "/var/log/mrce/mrce.log",
        "distributed": true,
        "structured": true
    },
    "use_distributed": true,
    "use_persistence": true,
    "use_llm": true,
    "use_hybrid_reasoning": true,
    "use_evolutionary": false,
    "llm": {
        "provider": "openai",
        "model": "gpt-4",
        "embedding_model": "text-embedding-ada-002",
        "fallbacks": [
            {
                "provider": "local",
                "model": "llama-70b"
            }
        ]
    },
    "database": {
        "type": "mongodb",
        "connection": "mongodb://mrce-db:27017/mrce",
        "replication": true
    },
    "distributed": {
        "ray_address": "ray://ray-head:10001",
        "cluster_resources": {
            "cpu": 32,
            "memory": 128000000000,
            "gpu": 4
        }
    },
    "security": {
        "constraints": {
            "safety": {
                "self_modification_limit": 0.2,
                "igvam_compliance_minimum": 0.9,
                "core_component_protection": ["CausalIntegrityWatchdog", "IGVAM", "AuditTrail", "SecurityGovernance"]
            },
            "operational": {
                "max_resource_usage": 0.85,
                "required_redundancy": 3,
                "recovery_capability": true,
                "failover_timeout": 5,
                "rate_limiting": {
                    "enabled": true,
                    "max_requests_per_minute": 600
                }
            },
            "cryptographic": {
                "audit_signing": true,
                "state_verification": true,
                "integrity_checking": true
            }
        },
        "audit_path": "/var/log/mrce/audit/audit_trail.json"
    },
    "performance": {
        "max_concurrent_ops": 500,
        "min_workers": 4,
        "max_workers": 32,
        "throttling": {
            "enabled": true,
            "thresholds": {
                "cpu": {"warning": 0.7, "critical": 0.9},
                "memory": {"warning": 0.8, "critical": 0.95},
                "io": {"warning": 0.7, "critical": 0.9}
            }
        },
        "caching": {
            "enabled": true,
            "max_size": 10000,
            "ttl": 3600
        }
    },
    "deployment": {
        "kubernetes": {
            "namespace": "mrce",
            "resources": {
                "requests": {
                    "memory": "4Gi",
                    "cpu": "2"
                },
                "limits": {
                    "memory": "8Gi",
                    "cpu": "4"
                }
            },
            "replicas": 3,
            "deployment_strategy": "blue_green"
        },
        "container": {
            "registry": "registry.example.com/mrce",
            "base_image": "python:3.11-slim"
        }
    },
    "monitoring": {
        "metrics": {
            "collection_interval": 10,
            "exporters": ["prometheus", "json"]
        },
        "alerts": {
            "channels": ["slack", "email"],
            "contacts": {
                "oncall": "oncall@example.com"
            }
        },
        "tracing": {
            "enabled": true,
            "sampling_rate": 0.1,
            "exporters": ["jaeger"]
        },
        "health_checks": [
            {
                "name": "memory_service",
                "endpoint": "/health/memory",
                "interval": 30,
                "timeout": 5,
                "healthy_threshold": 2,
                "unhealthy_threshold": 3
            },
            {
                "name": "reasoning_service",
                "endpoint": "/health/reasoning",
                "interval": 30,
                "timeout": 5,
                "healthy_threshold": 2,
                "unhealthy_threshold": 3
            }
        ]
    }
}