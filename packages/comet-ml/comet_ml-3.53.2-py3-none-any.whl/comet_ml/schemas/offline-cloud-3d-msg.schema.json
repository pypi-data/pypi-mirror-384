{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://comet.com/offline-file-upload-msg-schema.json",
    "type": "object",
    "required": [
      "name",
      "upload_type",
      "items",
      "thumbnail_path"
    ],
    "properties": {
      "name": {
        "$id": "#/properties/name",
        "type": "string",
        "default": true
        },
      "upload_type": {
        "$id": "#/properties/upload_type",
        "type": "string",
        "default": true
        },
      "items": {
        "$id": "#/properties/items",
        "type": "array",
        "asset_item":{
            "type": "object",
            "required": ["file_path", "file_name", "type"],
            "properties": {
                "file_path": {
                  "type": "string"
                },
                "file_name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              }
        }
      },
      "thumbnail_path": {
        "$id": "#/properties/thumbnail_path",
        "type": "string",
        "default": "",
        "examples": [
          "tmpynbcpbni"
        ],
        "pattern": "^(.*)$"
      },
      "metadata": {
        "$id": "#/properties/metadata",
        "type": [
          "object",
          "null"
        ],
        "title": "The Metadata Schema",
        "additionalProperties": true
      },
      "message_id": {
        "$id": "#/properties/message_id",
        "type": "integer",
        "title": "Message ID",
        "description": "The ID of the message",
        "default": -1,
        "examples": [
          1
        ]
      },
      "step": {
        "$id": "#/properties/step",
        "type": [
            "number",
            "null"
        ],
        "title": "Step",
        "description": "The step of the message",
        "default": null,
        "examples": [
          1
        ]
      }
    }
  }
