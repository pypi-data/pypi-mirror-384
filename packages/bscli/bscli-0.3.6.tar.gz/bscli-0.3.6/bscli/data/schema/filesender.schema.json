{
    "$id": "/schemas/filesender_api_config",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "FileSender API configuration",
    "description": "The schema of FileSender configuration data.",
    "type": "object",
    "properties": {
        "baseUrl": {
            "type": "string",
            "description": "The base URL of the FileSender instance (without /rest.php).",
            "format": "uri",
            "examples": ["https://filesender.example.org"]
        },
        "username": {
            "type": "string",
            "description": "The FileSender username for authentication.",
            "format": "string",
            "examples": ["12345678abcdef1234567890abcdef12345678"]
        },
        "email": {
            "type": "string",
            "description": "The FileSender email where emails are sent from.",
            "format": "email",
            "examples": ["john.doe@example.com"]
        },
        "apikey": {
            "type": "string",
            "description": "The FileSender API key for authentication.",
            "examples": ["your-api-key-here"]
        },
        "defaultTransferDaysValid": {
            "type": "integer",
            "description": "Default number of days transfers remain valid.",
            "minimum": 1,
            "maximum": 365,
            "default": 10
        }
    },
    "required": ["baseUrl", "username", "apikey"]
}