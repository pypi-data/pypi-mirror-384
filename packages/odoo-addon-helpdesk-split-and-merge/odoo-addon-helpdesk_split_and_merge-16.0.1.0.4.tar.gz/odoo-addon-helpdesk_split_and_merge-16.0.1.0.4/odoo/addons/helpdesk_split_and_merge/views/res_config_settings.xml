<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_split_and_merge_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">helpdesk.split_and_merge.res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Split and Merge"
                    string="Split and Merge" data-key="split_and_merge">
                    <div class="helpdesk_split_and_merge">
                        <h2>Merge:</h2>
                        <div class="row mt16 o_settings_container">
                            <group>
                                <field name="merge_ticket_stage" />
                                <field name="merge_email_template" />
                            </group>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>