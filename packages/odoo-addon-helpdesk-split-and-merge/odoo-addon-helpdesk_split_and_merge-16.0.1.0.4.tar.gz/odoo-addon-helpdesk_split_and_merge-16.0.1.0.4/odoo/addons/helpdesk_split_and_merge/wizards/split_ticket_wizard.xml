<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the form view of helpdesk.ticket -->
        <record id="helpdesk_ticket_view_split_wizard" model="ir.ui.view">
            <field name="name">helpdesk.ticket.split.wizard</field>
            <field name="model">helpdesk_split_and_merge.wizard_split</field>
            <field name="arch" type="xml">
                <form string="Split Wizard" create="false">
                    <sheet>
                        <field
                            name="split_ticket_ids"
                            context="{'default_split_ticket_id': active_id}"
                            mode="kanban"
                        />
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>
</odoo>