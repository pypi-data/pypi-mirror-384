<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="helpdesk_ticket_view_merge_wizard" model="ir.ui.view">
            <field name="name">helpdesk.ticket.merge.wizard</field>
            <field name="model">helpdesk_split_and_merge.wizard_merge</field>
            <field name="arch" type="xml">
                <form string="Merge Wizard">
                    <sheet>
                        <group>
                            <field name="ticket_id" invisible="1" />
                            <field name="message" placeholder="This Ticket has been merged into ##" />
                            
                            <field name="merge_ticket_id"
                                can_create="false"
                                domain="[('partner_id', '=', context.get('partner_id')), ('id', '!=', ticket_id)]"
                                widget="selectable"
                                required="1"
                                context="{'default_ticket_id': active_id}"
                            />
                            <field 
                                name="message_main_ticket"
                                placeholder="The Ticket ## was closed and has been merged into this Ticket"
                            />
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_merge_ticket" string="Merge" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
    
    </data>
</odoo>
