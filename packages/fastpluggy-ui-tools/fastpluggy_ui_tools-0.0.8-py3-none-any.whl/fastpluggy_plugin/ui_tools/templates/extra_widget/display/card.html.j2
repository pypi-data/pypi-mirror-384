{# Card widget template #}
{% macro render_card(widget) %}

    <div class="{{ widget.css_classes }}" id="{{ widget.widget_id }}">
        {% if image_url and image_position == "top" %}
            <img src="{{ widget.image_url }}" class="card-img-top" alt="{{ widget.title or 'Card image' }}">
        {% endif %}

        {% if  widget.header %}
            <div class="card-header">
                {{ widget.header | safe }}
            </div>
        {% endif %}

        <div class="card-body">
            {% if  widget.title %}
                <h5 class="card-title">{{ widget.title }}</h5>
            {% endif %}

            {% if  widget.content %}
                <div class="card-text">
                    {{ widget.content | safe }}
                </div>
            {% endif %}

            {% if  widget.links %}
                <div class="card-links mt-3">
                    {% for link in  widget.links %}
                        <a href="{{ link.url }}" class="btn btn-{{ link.type|default('primary') }} btn-sm">
                            {{ link.text }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        {% if  widget.image_url and  widget.image_position == "bottom" %}
            <img src="{{ widget.image_url }}" class="card-img-bottom" alt="{{ widget.title or 'Card image' }}">
        {% endif %}

        {% if  widget.footer %}
            <div class="card-footer">
                {{ widget.footer | safe }}
            </div>
        {% endif %}
    </div>
{% endmacro %}
