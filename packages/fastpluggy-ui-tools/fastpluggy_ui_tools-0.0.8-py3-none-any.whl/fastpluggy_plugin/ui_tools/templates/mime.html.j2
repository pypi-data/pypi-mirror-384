{% macro display_item(item) %}
    {% if item.mime.startswith('text/') %}
        <p><strong>Text Content:</strong> {{ item.content }}</p>
    {% elif item.mime.startswith('image/') %}
        <p><strong>Image:</strong></p>
        <img src="{{ item.content }}" alt="Image">
    {% elif item.mime == 'application/json' %}
        <p><strong>JSON Content:</strong></p>
        <pre>{{ item.content }}</pre>
    {% else %}
        <p><strong>Unknown MIME Type:</strong> {{ item.mime }}</p>
        <p>{{ item.content }}</p>
    {% endif %}
{% endmacro %}
