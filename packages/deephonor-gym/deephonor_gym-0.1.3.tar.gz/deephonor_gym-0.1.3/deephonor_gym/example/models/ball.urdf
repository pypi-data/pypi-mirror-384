<robot name="sphere_robot">

  <!-- 定义球体 -->
  <link name="ball">
    <collision>
      <geometry>
        <sphere radius="1.0"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <sphere radius="1.0"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/> <!-- RGBA颜色 -->
      </material>
    </visual>

    <!-- 质量 -->
    <inertial>
      <mass value="1.0"/>
    </inertial>

  </link>
  
</robot>