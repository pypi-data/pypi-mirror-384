    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "main.py"
        },
        {
            "name": "Hatch Env: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["--tb=long", "--showlocals", "${workspaceFolder}/tests/", ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {},
            "justMyCode": false
        }
    ]
}