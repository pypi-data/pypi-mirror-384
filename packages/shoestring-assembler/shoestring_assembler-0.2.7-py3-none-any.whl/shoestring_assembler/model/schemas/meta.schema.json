{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://digitalshoestring.net/meta.schema.json",
    "title": "Base Service Module Meta File Schema",
    "description": "Defines key details about a service module source for the Shoestring Solution Assembler",
    "type": "object",
    "patternProperties": {
        "^.*$": {
            "$comment": "the pattern above doesn't matter as it never makes it into the final compose file",
            "description": "container definition",
            "type": "object",
            "required": [
                "dockerfile",
                "volume"
            ],
            "properties": {
                "dockerfile": {
                    "type": "string",
                    "description": "path to the Dockerfile from the source root"
                },
                "compose_partial": {
                    "type": "string",
                    "description": "path from the source root to a yaml snippet that include additional compose entries to add for this container (if present)"
                },
                "volume": {
                    "description": "container definition",
                    "type": "object",
                    "required": [
                        "data",
                        "user_config"
                    ],
                    "properties": {
                        "data": {
                            "$ref": "#/$defs/volume_definition_schema",
                            "description": "volume description for containers data volume"
                        },
                        "user_config": {
                            "$ref": "#/$defs/volume_definition_schema",
                            "description": "volume description for containers user config volume"
                        }
                    },
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "#/$defs/volume_definition_schema",
                            "description": "other custom volume descriptions"
                        }
                    }
                }
            }
        }
    },
    "$defs": {
        "volume_definition_schema": {
            "description":"sub schema for a volume definition",
            "type":"object",
            "properties":{
                "ignore":{
                    "description":"If true, this volume definition isn't used in the compose file",
                    "enum":[true]
                },
                "path":{
                    "description":"The internal path at which the volume is mounted",
                    "type":"string"
                },
                "mode":{
                    "description":"The mount type",
                    "enum":["ro","rw"]
                }
            },
            "$comment": "Ensures that volume description either has a path or is ignored",
            "anyOf":[
                {
                    "required":[
                        "path"
                    ]
                },
                {
                    "required":[
                        "ignore"
                    ]
                }
            ]
        }
    }
}