{
    "name": "extension",
    "version": "1.0.1",
    "description": "CUGA is a generalist agent that can perform any task using web and api tools.",
    "type": "module",
    "scripts": {
        "pretest": "npm run build",
        "test": "playwright test -c src/tests/build",
        "build-shared": "npm run build -w @uiagent/shared",
        "dev": "npm run build-shared && wxt",
        "dev:firefox": "npm run build-shared && wxt -b firefox",
        "build": "npm run build-shared && wxt build",
        "build:firefox": "npm run build-shared && wxt build -b firefox --mv3",
        "release": "npm run build-shared && wxt build && rm -rf releases/chrome-mv3/* && cp -r .output/chrome-mv3/* releases/chrome-mv3/",
        "release:firefox": "npm run build-shared && wxt build -b firefox --mv3 && rm -rf releases/firefox-mv2/* && mkdir -p releases/firefox-mv2 && cp -r .output/firefox-mv2/* releases/firefox-mv2/",
        "zip": "npm run build-shared && wxt zip",
        "zip:firefox": "npm run build-shared && wxt zip -b firefox --mv3",
        "compile": "tsc --noEmit",
        "start": "npm run build-shared && npm run dev",
        "prod": "npm run build-shared && npm run build",
        "publish": "node scripts/publish.js",
        "e2etest": "playwright test",
        "postinstall": "wxt prepare"
    },
    "keywords": [],
    "author": "",
    "license": "Apache-2.0",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/chrome": "^0.0.304",
        "@types/js-yaml": "^4.0.9",
        "@types/jsoneditor": "^9.9.5",
        "@types/lodash.debounce": "^4.0.9",
        "@types/node": "^20.14.15",
        "@types/uuid": "^10.0.0",
        "@types/webextension-polyfill": "^0.10.0",
        "@wxt-dev/module-react": "^1.1.3",
        "@wxt-dev/webextension-polyfill": "^1.0.0",
        "cross-env": "^7.0.3",
        "dateformat": "^5.0.3",
        "sass": "^1.77.8",
        "terser": "^5.27.0",
        "typescript": "^5.5.4",
        "vite": "^6.3.5",
        "vite-plugin-checker": "^0.9.0",
        "vite-plugin-static-copy": "^2.3.0",
        "vite-plugin-web-extension": "^4.0.0",
        "wxt": "^0.20.6"
    },
    "dependencies": {
        "@uiagent/shared": "workspace:*",
        "agentic_chat": "workspace:*",
        "axios": "^1.12.0",
        "cockatiel": "^3.2.1",
        "dotenv": "^16.4.5",
        "idb": "^8.0.0",
        "immer": "^10.1.1",
        "inversify": "^6.0.2",
        "jose": "^5.9.2",
        "js-yaml": "^4.1.0",
        "jsoneditor": "^10.0.0",
        "loglevel": "^1.9.2",
        "loglevel-plugin-prefix": "^0.8.4",
        "react": "^18.2.0",
        "reflect-metadata": "^0.2.2",
        "runtime": "workspace:*",
        "tar": "^7.2.0",
        "use-immer": "^0.11.0",
        "uuid": "^10.0.0",
        "webextension-polyfill": "^0.10.0"
    }
}
