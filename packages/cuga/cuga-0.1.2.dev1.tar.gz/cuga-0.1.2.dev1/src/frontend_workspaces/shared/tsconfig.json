{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
