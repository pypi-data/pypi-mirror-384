{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "types": [],
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}
