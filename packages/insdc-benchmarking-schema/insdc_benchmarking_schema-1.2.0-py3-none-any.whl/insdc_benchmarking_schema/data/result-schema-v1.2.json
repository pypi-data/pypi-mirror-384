{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "INSDC Benchmarking Result v1.2",
  "description": "Schema for a single benchmarking test result",
  "type": "object",
  "required": [
    "timestamp", "site", "protocol", "repository", "dataset_id",
    "status", "duration_sec", "file_size_bytes", "average_speed_mbps", "checksum_md5"
  ],
  "properties": {
    "timestamp": {"type": "string", "format": "date-time"},
    "site": {"type": "string"},
    "protocol": {"type": "string", "enum": ["ftp", "aspera", "globus", "wget", "sra-toolkit", "ena-downloader", "http-browser", "other"]},
    "repository": {"type": "string", "enum": ["ENA", "SRA", "DDBJ"]},
    "dataset_id": {"type": "string", "pattern": "^[SED]RR[0-9]+$"},
    "duration_sec": {"type": "number", "minimum": 0},
    "file_size_bytes": {"type": "integer", "minimum": 0},
    "average_speed_mbps": {"type": "number", "minimum": 0},
    "cpu_usage_percent": {"type": "number", "minimum": 0, "maximum": 100},
    "memory_usage_mb": {"type": "number", "minimum": 0},
    "status": {"type": "string", "enum": ["success", "fail", "partial"]},
    "checksum_md5": {"type": "string", "pattern": "^[a-f0-9]{32}$"},
    "checksum_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "write_speed_mbps": {"type": "number", "minimum": 0},
    "network_latency_ms": {"type": "number", "minimum": 0},
    "packet_loss_percent": {"type": "number", "minimum": 0, "maximum": 100},
    "network_path": {"type": "array", "items": {"type": "string"}},
    "error_message": {"type": ["string", "null"]},
    "tool_version": {"type": "string"},
    "notes": {"type": ["string", "null"]}
  },
  "additionalProperties": false
}
