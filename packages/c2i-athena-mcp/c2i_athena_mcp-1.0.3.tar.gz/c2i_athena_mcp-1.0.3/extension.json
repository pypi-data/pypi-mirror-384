{
  "name": "c2i-athena-mcp",
  "displayName": "C2i Athena MCP",
  "description": "AWS Athena database operations and MRD calculations for C2i Genomics",
  "version": "1.0.0",
  "author": "C2i Genomics",
  "homepage": "https://github.com/c2i-genomics/c2i-athena-mcp",
  "license": "MIT",
  "keywords": ["genomics", "athena", "aws", "mrd", "bioinformatics"],
  
  "main": {
    "command": "uvx",
    "args": ["c2i-athena-mcp"]
  },
  
  "configuration": {
    "title": "C2i Athena MCP Configuration",
    "type": "object",
    "properties": {
      "awsRegion": {
        "type": "string",
        "title": "AWS Region",
        "description": "AWS region for Athena operations",
        "default": "us-east-1",
        "enum": ["us-east-1", "us-west-2", "eu-west-1"]
      },
      "awsProfile": {
        "type": "string", 
        "title": "AWS Profile",
        "description": "AWS profile name for authentication (required)",
        "examples": ["C2iAlefResearchAccess-340686126008", "default"]
      },
      "s3OutputUri": {
        "type": "string",
        "title": "S3 Output URI",
        "description": "S3 URI for Athena query results",
        "default": "s3://airflow-research-main-1-us-east-1/athena/results/",
        "pattern": "^s3://[a-z0-9.-]+(/.*)?$"
      }
    },
    "required": ["awsProfile"]
  },
  
  "environmentMapping": {
    "AWS_REGION": "awsRegion",
    "AWS_PROFILE": "awsProfile", 
    "AWS_S3_OUTPUT_URI": "s3OutputUri"
  },
  
  "capabilities": {
    "tools": [
      {
        "name": "list_databases",
        "description": "List available Athena databases",
        "examples": ["Show me all databases", "List databases"]
      },
      {
        "name": "list_tables",
        "description": "List tables in a database",
        "examples": ["Show tables in research_db", "What tables are available?"]
      },
      {
        "name": "execute_query",
        "description": "Execute SQL queries against Athena",
        "examples": ["SELECT * FROM samples LIMIT 10", "Query the latest results"]
      },
      {
        "name": "calculate_mrd_score_for_sample", 
        "description": "Calculate MRD score for a sample",
        "examples": ["Calculate MRD for SAMPLE123", "What's the MRD score for this sample?"]
      },
      {
        "name": "calculate_mrd_for_dataset",
        "description": "Process MRD calculations for datasets",
        "examples": ["Calculate MRD for all samples in batch_001", "Process MRD for the dataset"]
      }
    ]
  },
  
  "installation": {
    "requirements": {
      "python": ">=3.11",
      "system": ["aws-cli"]
    },
    "preInstall": [
      "Ensure AWS CLI is configured with appropriate credentials",
      "Verify access to C2i Genomics AWS environment",
      "Check that the specified AWS profile exists"
    ],
    "postInstall": [
      "Test connection with: uvx c2i-athena-mcp --help",
      "Verify AWS permissions for Athena and S3 access"
    ]
  },
  
  "documentation": {
    "quickStart": "https://github.com/c2i-genomics/c2i-athena-mcp#quick-start",
    "examples": "https://github.com/c2i-genomics/c2i-athena-mcp#examples",
    "troubleshooting": "https://github.com/c2i-genomics/c2i-athena-mcp#troubleshooting"
  }
}