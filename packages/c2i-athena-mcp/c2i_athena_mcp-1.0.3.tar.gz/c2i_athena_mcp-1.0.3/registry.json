{
  "mcpServers": {
    "c2i-athena": {
      "name": "C2i Athena MCP Server",
      "description": "AWS Athena database operations and MRD calculations for C2i Genomics",
      "version": "1.0.2",
      "author": "C2i Genomics",
      "homepage": "https://github.com/c2i-genomics/c2i-athena-mcp",
      "installation": {
        "package": "c2i-athena-mcp",
        "registry": "pypi",
        "command": "uvx",
        "args": ["--upgrade", "c2i-athena-mcp"]
      },
      "configuration": {
        "env": {
          "AWS_REGION": {
            "description": "AWS region for Athena operations",
            "default": "us-east-1",
            "required": true
          },
          "AWS_PROFILE": {
            "description": "AWS profile for authentication",
            "required": true
          },
          "AWS_S3_OUTPUT_URI": {
            "description": "S3 URI for Athena query results",
            "default": "s3://airflow-research-main-1-us-east-1/athena/results/",
            "required": false
          }
        }
      },
      "capabilities": [
        "athena-queries",
        "mrd-calculations",
        "database-operations"
      ],
      "tags": [
        "genomics",
        "athena",
        "aws",
        "mrd",
        "bioinformatics"
      ],
      "documentation": {
        "readme": "https://raw.githubusercontent.com/c2i-genomics/c2i-athena-mcp/main/README.md",
        "examples": [
          {
            "description": "List available databases",
            "prompt": "Show me all available Athena databases"
          },
          {
            "description": "Calculate MRD score",
            "prompt": "Calculate MRD score for sample SAMPLE123"
          },
          {
            "description": "Query sample data",
            "prompt": "Show me the latest 10 samples from the research database"
          }
        ]
      }
    }
  }
}