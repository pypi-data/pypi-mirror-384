<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="kubectl_context_form_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_context_form_view</field>
        <field name="model">kubectl.context</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        string="Test Connection"
                        name="action_test_connection"
                        type="object"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <field name="is_current" insible="1" />
                        <page string="Command" name="command">
                            <group>
                                <group>
                                    <field
                                        name="command"
                                        placeholder="kubectl get pods"
                                    />
                                    <label for="action_run" />
                                    <button
                                        name="action_run"
                                        string="Run"
                                        class="btn btn-primary"
                                        type="object"
                                    />
                                </group>
                                <group>
                                    <field name="output" class="terminal-screen" />
                                </group>
                            </group>
                        </page>
                        <page string="Config" name="config">
                            <group>
                                <group>
                                    <field name="cluster_id" />
                                    <field name="config" class="terminal-screen" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kubectl_context_list_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_context_list_view</field>
        <field name="model">kubectl.context</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="cluster_id" />
                <field name="is_current" />
                <button
                    name="action_use_context"
                    string="Use Context"
                    type="object"
                    invisible="is_current"
                />
            </list>
        </field>
    </record>

    <record id="kubectl_context_search_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_context_search_view</field>
        <field name="model">kubectl.context</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="cluster_id" />
            </search>
        </field>
    </record>

    <record id="action_kubectl_context_view" model="ir.actions.act_window">
        <field name="name">Contexts</field>
        <field name="res_model">kubectl.context</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="kubectl_context_search_view" />
    </record>

    <menuitem
        id="kubectl.menu_kubectl_context"
        name="Contexts"
        parent="kubectl.menu_root"
        action="kubectl.action_kubectl_context_view"
        sequence="10"
    />
</odoo>
