<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="kubectl_namespace_form_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_namespace_form_view</field>
        <field name="model">kubectl.namespace</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="uid" />
                    </group>
                    <notebook />
                </sheet>
            </form>
        </field>
    </record>

    <record id="kubectl_namespace_list_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_namespace_list_view</field>
        <field name="model">kubectl.namespace</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button
                        name="action_get_namespaces"
                        string="Get Namespaces"
                        type="object"
                        class="oe_highlight"
                    />
                </header>
                <field name="name" />
                <field name="cluster_id" />
            </list>
        </field>
    </record>

    <record id="kubectl_namespace_search_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_namespace_search_view</field>
        <field name="model">kubectl.namespace</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="action_kubectl_namespace_view" model="ir.actions.act_window">
        <field name="name">Namespaces</field>
        <field name="res_model">kubectl.namespace</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="kubectl_namespace_search_view" />
    </record>

    <menuitem
        id="kubectl.menu_kubectl_namespace"
        name="Namespaces"
        parent="kubectl.menu_root"
        action="kubectl.action_kubectl_namespace_view"
        sequence="30"
    />
</odoo>
