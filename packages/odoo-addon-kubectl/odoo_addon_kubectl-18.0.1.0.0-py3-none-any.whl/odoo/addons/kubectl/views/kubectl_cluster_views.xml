<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="kubectl_cluster_form_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_cluster_form_view</field>
        <field name="model">kubectl.cluster</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="server" />
                                    <field name="provider_id" />
                                </group>
                                <group>
                                    <field name="code" />
                                    <field name="domain" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kubectl_cluster_list_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_cluster_list_view</field>
        <field name="model">kubectl.cluster</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="server" />
            </list>
        </field>
    </record>

    <record id="kubectl_cluster_search_view" model="ir.ui.view">
        <field name="name">kubectl.kubectl_cluster_search_view</field>
        <field name="model">kubectl.cluster</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="server" />
            </search>
        </field>
    </record>

    <record id="action_kubectl_cluster_view" model="ir.actions.act_window">
        <field name="name">Clusters</field>
        <field name="res_model">kubectl.cluster</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="kubectl_cluster_search_view" />
    </record>

    <menuitem
        id="kubectl.menu_root"
        name="kubectl"
        web_icon="kubectl,static/description/icon.png"
    />
    <menuitem
        id="kubectl.menu_kubectl_cluster"
        name="Clusters"
        parent="kubectl.menu_root"
        action="kubectl.action_kubectl_cluster_view"
        sequence="20"
    />
</odoo>
